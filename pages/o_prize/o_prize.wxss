/* pages/o_prize/o_prize.wxss */


page{
    height: 100%;
    background-color: #F3F3F3;
}
.o_prize_page{
    padding: 28rpx;
}

/* prize_item */
.prize_item{
    background-color: #fff;
    border-radius:14rpx;
    padding: 19rpx;
    display: flex;
}
.prize_item:not(:first-of-type){
    margin-top:22rpx;
}
.prize_item .image{
    flex:0 0 auto;
    width: 156rpx;
    height: 122rpx;
    position: relative;
    overflow: hidden;
    border-radius:10rpx;
    margin-right: 28rpx;
}   
.prize_item .image image{
    border-radius:10rpx;
    width: 100%;
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translateX(-50%) translateY(-50%);
}

.prize_item .info{
    width: 0;
    flex:1;
}
.prize_item .info .title{
    font-size: 30rpx;
    color: #333;
    font-weight: bold;
    margin-bottom: 35rpx;
}
.prize_item .info .date{
    font-size: 24rpx;
    color: #666;
}

.prize_item .btn{
    flex:0 0 auto;
    align-self:center;
    width: 160rpx;
    height: 60rpx;
    border-radius:30rpx;
    background:linear-gradient(to left,rgba(129,128,130,1),rgba(172,171,173,1));
    box-shadow:0 10rpx 10rpx rgba(172,171,173,0.6);
    font-size: 28rpx;
    color: #fff;
    display: flex;
    align-items: center;
    justify-content: center;
}
.prize_item .btn.active{
    background:linear-gradient(to left,rgba(255,103,101,1),rgba(241,64,62,1));
    box-shadow:0 10rpx 10rpx rgba(255,103,101,0.6);
}/* prize_item */
.go_btn{
    height: 90rpx;
    background:linear-gradient(to left,rgba(18,77,184,1),rgba(32,161,224,1));
    border-radius:10rpx;
    font-size: 30rpx;
    color: #fff;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow:0 8rpx 8rpx rgba(32, 161, 224, 0.6);
	margin-top: 50rpx;
}
.addheight{
	margin-top: 200rpx;
}
.not-more{padding:40rpx 0;text-align: center;font-size: 28rpx;}
.forms-box{position: fixed;width:100%;height:100%;left:0;top:0;z-index: 999;}
.code{background: rgba(0,0,0,.6);text-align: center;}
.code .box{padding:60rpx 52rpx;border-radius: 30rpx;background: #fff;position: relative;}
.code .box .h3{font-size: 30rpx;line-height: 46rpx;}
.code .box .p{width:404rpx;height:60rpx;background: #FEF0F0;line-height: 60rpx;margin:58rpx 0 50rpx;font-size: 26rpx;color:#F1403E;}
.code .box .btn{width:332rpx;height:70rpx;background: linear-gradient(-90deg, #124DB8, #20A1E0);line-height: 70rpx;margin:0 auto;border-radius: 70rpx;color:#fff;font-size: 28rpx;}
.close_btn{font-size: 50rpx;color:#fff;position: absolute;bottom:-100rpx;left:50%;transform: translateX(-50%);}
.close_btn::after{content:"";display: block;width:2rpx;height:50rpx;background: linear-gradient(0, #fff, transparent);bottom:90%;left:calc(50% - 1rpx);position: absolute;}