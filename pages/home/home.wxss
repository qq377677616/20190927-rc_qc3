/* pages/home/home.wxss */

page{
    height:100%;
    background-color:#F4F4F4;
}
.home_page{
    padding: 0 28rpx 100rpx;
}

/* header */
.header{
    min-height:225rpx;
    display: flex;
    align-items:center;
    position: relative;
}
.header .image{position: relative;}
.header .image button{position: absolute;width:100%;height:100%;left:0;top:0;}
.header .my_photo{
    flex:0 0 auto;
    width: 129rpx;
    height: 129rpx;
    border-radius: 50%;
    margin-right: 36rpx;
}
.sethandimg{
	width: 120rpx;
	height: 120rpx;
	left: 0;
	top: 0;
	z-index: 9;
}
.header .info_area{
    width: 0;
    flex:1;
    padding: 0 108rpx 0 0;
}
.header .info_area .name{
    font-size:30rpx;
    color:rgba(51,51,51,1);
    padding-bottom: 25rpx;
    display: flex;
    align-items: center;
    padding-right: 50%;
}
.header .info_area .name .nick-name{
    width: 0;
    flex:1;
}
.header .info_area .name .setsize{
    flex:0 0 auto;
	font-size: 40rpx;
}
.header .info_area .v_coin{
    display: flex;
    align-items: center;
    line-height: 1em;
    color:rgba(241,64,62,1);
}
.header .info_area .v_coin .v_mark{
    width: 30rpx;
}
.header .info_area .v_coin .total{
    font-size:32rpx;
    margin: 0 12rpx 0 22rpx;
}
.header .info_area .v_coin .more{
    font-size:30rpx;
}
.header .btn{
    padding: 0 25rpx;
    height: 66rpx;
    font-size:26rpx;
    color:#F8F9F8;
    border-radius:66rpx 0 0 66rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    position: absolute;
    top: 69rpx;
    right: -28rpx;
}
.header .bind_btn{
    background-color:#333;
    box-shadow: -6rpx 6rpx 12rpx rgba(51,51,51,0.4);
}
.header .binded_btn{
    background-image:linear-gradient(to left,rgba(18,77,184,1),rgba(32,161,224,1));
    box-shadow: -6rpx 6rpx 12rpx rgba(32,161,224,0.4);
}
.header .binded_btn .icon{
    margin-right: 14rpx;
    font-size: 32rpx;
}
.header .refresh-btn{
    position: absolute;
    top: 140rpx;
    right: -28rpx;
    display: flex;
    align-items:center;
    color: #666;
    font-size: 26rpx;
    padding: 20rpx 30rpx;
}
.header .refresh-btn image{
    width: 26rpx;
    margin-right: 12rpx;
}
.header .refresh-btn image{

}
/* header */

/* nav_area */
.nav_area{
    height: 176rpx;
    display: flex;
    align-items: center;
    background-color: #fff;
    border-radius:18rpx;
    margin-bottom: 26rpx;
}
.nav_area .nav_item{
    width: 33.3%;
    flex:0 0 auto;
    display: flex;
    flex-direction: column;
    align-items: center;
}
.nav_area .nav_item .icon{
    font-size: 44rpx;
    color: #1354BB;
    margin-bottom: 25rpx;
}
.nav_area .nav_item .span{
    line-height: 1em;
    font-size:30rpx;   
    color:rgba(51,51,51,1);

}/* nav_area */

/* my_list */
.my_list{
    background-color: #fff;
    border-radius:18rpx;
}
.my_list .list_item{
    display: flex;
    align-items: center;
    padding: 0 28rpx;
    height: 110rpx;
}
.my_list .list_item .icon{
    flex:0 0 auto;
    color: #9A9A9A;
    font-size: 34rpx;
    margin-right: 21rpx;
}
.my_list .list_item .span{
    width: 0;
    flex:1;
    display: flex;
}
.my_list .list_item .span .text{
    font-size:28rpx;
    color:rgba(102,102,102,1);
    position: relative;
}
.my_list .list_item .span .text .dot{
    position: absolute;
    top: 0;
    right: 0;
    transform:translateX(100%) translateY(-50%);
    color: #fff;
    font-size: 20rpx;
    height: 24rpx;
    line-height:24rpx;
    background-color: #F23E3C;
    border-radius: 14rpx;
    border: 1rpx solid #fff4e9;
    min-width:30rpx;
    display: flex;
    justify-content: center;
    padding-right: 5rpx;
}
.my_list .list_item .more{
    flex:0 0 auto;
    color: #9A9A9A;
    font-size: 30rpx;
}/* my_list */
