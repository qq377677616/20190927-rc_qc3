/* pages/addRemark/addRemark.wxss */
.whole{
	width: 100vw;
	height: 100vh;
	padding: 44rpx 39rpx;
	box-sizing: border-box;
}
.txt1{
	font-size:36rpx;
	font-family:Source Han Sans CN;
	font-weight:500;
	color:rgba(51,51,51,1);
}
.p_style{
	font-size:28rpx;
	font-family:Source Han Sans CN;
	font-weight:400;
	color:rgba(163,163,163,1);
}
.areaBox{
	width: 100%;
	height: 200rpx;
	margin-top: 21rpx;
}

.code {
    box-sizing: border-box;
    height: 102rpx;
    padding: 22rpx 34rpx;
    display: flex;
	align-items: center;
	box-shadow:0 0 2rpx #333;
}

.code input {
    width: 0;
    flex: 1;
    font-size: 26rpx;
    color: #000;
}

.code input::placeholder {
    color: #333;
}
.code .canvas {
    flex: 0 0 auto;
    width: 160rpx;
    height: 58rpx;
    border-radius: 14rpx;
    background-color: #F3EDEF;
}

.fb_btn{
	position: relative;
	display: flex;
	justify-content: center;
}
.fb_btn>image{
	width: 674rpx;
	height:auto;
	margin: 0 auto;
	margin-top: 100rpx;
}
.txt2{
	position: absolute;
	font-size:30rpx;
	font-family:Source Han Sans CN;
	font-weight:500;
	color:rgba(255,255,255,1);
	top: 50%;
	margin-top: 20rpx;
}
.fb_btn button{
	width: 100%;
	height: 120rpx;
	position: absolute;
	left: 0;
	top: 90rpx;
	z-index: 999;
}