/* pages/one_yard/one_yard.wxss */

.banner {
  width: 750rpx;
  /* height: 320rpx; */
  overflow: hidden;
}

.banner image {
  width: 100%;
}

.title {
  width: 204rpx;
  height: 26rpx;
  background-size: 100% 100%;
  background-repeat: no-repeat;
  margin: 35rpx auto 0;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 34rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: rgba(51, 51, 51, 1);
}

.form {
  padding: 23rpx 29rpx 0rpx;
  display: flex;
  flex-direction: column;
}

.t-txt {
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: rgba(102, 102, 102, 1);
}

.inp {
  width: 662rpx;
  height: 76rpx;
  background: #f5f5f5;
  border-radius: 6rpx;
  margin: 25rpx auto 0;
  padding: 0rpx 15rpx;
  display: flex;
  align-items: center;
  position: relative;
}

.all-inp {
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
}

.mt1 {
  margin-top: 35rpx;
}

.code {
  display: flex;
  width: 100%-23rpx;
}

.inp2 {
  width: 477rpx;
}

.inp3{
  width: 692rpx;
}

.code_btn {
  width: 196rpx;
  height: 76rpx;
  border: 1rpx solid rgba(210, 210, 210, 1);
  border-radius: 10rpx;
  line-height: 76rpx;
  text-align: center;
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  margin-top: 25rpx;
  margin-left: 20rpx;
}

.mt2 {
  margin-top: 34rpx;
}

.picker {
  display: flex;
  align-items: center;
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  position: relative;
}

.sanjiao {
  width: 0;
  height: 0;
  border-right: 5px solid transparent;
  border-left: 5px solid transparent;
  border-top: 5px solid #515151;
  position: absolute;
  right: 32rpx;
  top: 50%;
  transform: translateY(-50%);
}

.getPhone{
  display: flex;
  justify-content: center;
  position: relative;
  margin: 40rpx 0 0;
}

.wechat {
  display: flex;
  align-items: center;
}

.btnPhone{
  width: 265rpx;
  height: 44rpx;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
}

.wechat image {
  width: 44rpx;
}

.w-txt {
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #333;
  margin-left: 16rpx;
}

.one-btn {
  width: 100%;
  height: 90rpx;
  border-radius: 15rpx;
  background: linear-gradient(90deg, rgba(32, 161, 224, 1), rgba(18, 77, 184, 1));
  line-height: 90rpx;
  text-align: center;
  font-size: 36rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #FFF;
  margin: 48rpx 0;
}

picker{
  width: 100%;
  position: absolute;
  z-index: 1;
}
