/* pages/friendHelp/friendHelp.wxss */
page{
	background-color: #F3F3F3;
}
.handImg{
	width: 100%;
	height:433rpx;
	background: center no-repeat;
	background-size: cover; 
	position: relative;
}
.helpBox{
	width: 692rpx;
	position: absolute;
	left: 50%;
	transform: translateX(-50%);
	background-color: white;
	border-radius: 16rpx;
	top: 234rpx;
	padding: 42rpx 30rpx;
	box-sizing: border-box;
}
.helpBox2{
	height: 589rpx;
}
.userBox{
	width: 100%;
	display: flex;
}

.helpBtn,.myEnter{
	width:586rpx;
	height:90rpx;
	background:linear-gradient(90deg,rgba(32,161,224,1),rgba(18,77,184,1));
	border-radius:10px;
	margin:0 auto;
	margin-top:469rpx;  
	text-align: center;
	line-height: 90rpx;
}
.helpBtn>text{
	width:183rpx;
	height:29rpx;
	font-size:30rpx;
	font-family:Source Han Sans CN;
	font-weight:400;
	color:rgba(255,255,255,1);
}
.myEnter{
	width:586rpx;
	height:90rpx;
	border:1px solid #199DDF;
	border-radius:10rpx;
	background: transparent;
	/* margin-top:29rpx; */
}
.myEnter>text{
	width:146rpx;
	height:29rpx;
	font-size:30rpx;
	font-family:Source Han Sans CN;
	font-weight:400;
	color:rgba(21,97,193,1);
}
.userImg{
	width: 126rpx;
	height: 126rpx;
	border-radius: 50%;
	background: center no-repeat;
	background-size: cover;
	position: absolute;
	top: 175rpx;
	left: 50%;
	transform: translateX(-50%);
}
.readyTxt{
	padding-top: 40rpx;
	margin: 0 auto;
	text-align: center;
	font-size:30rpx;
	font-family:Source Han Sans CN;
	font-weight:500;
	color:rgba(51,51,51,1);
}
.moreTxt{
	text-align: center;
	color: #F1403E;
	font-size: 28rpx;
	margin-top: 43rpx;
}
.firendList{
	width: 586rpx;
	height: 310rpx;
	background-color: #F7FCFE;
	margin: 0 auto;
	margin-top: 41rpx;
	padding:46rpx 45rpx 0rpx 45rpx; 
	box-sizing: border-box;
	display: flex;
	flex-direction: column;
}
.setflex{
	width: 100%;
	height: 200rpx;
	display: flex;
	flex-wrap: wrap;
	justify-content: space-between;
}
.firendNum{
	flex: 1;
	text-align: center;
	color: #666;
	font-size: 24rpx;
}
.friendItem{
	width: 67rpx;
	height: 67rpx;
	background: center no-repeat;
	background-size: cover;
	border-radius: 50%;
	margin-left: 30rpx;
}