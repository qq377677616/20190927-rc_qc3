/* pages/o_prize_detail/o_prize_detail.wxss */

page {
    height: 100%;
    background-color: #F1F1F1;
}

.o_prize_detail_page {
    padding: 24rpx 28rpx;
}

/* order_status */
.order_status{
    background-color: #fff;
    border-radius:14rpx;
    height: 154rpx;
    padding: 33rpx 24rpx 37rpx 37rpx;
    display: flex;
    align-items:center;
    box-sizing: border-box;
    margin-bottom: 25rpx;
    box-shadow:0rpx 6rpx 32rpx 0rpx rgba(209,209,209,0.2);
}
.order_status image{
    flex:0 0 auto;
    width: 84rpx;
    height: 84rpx;
    margin-right: 30rpx;
}
.order_status .span{
    width: 0;
    flex:1;
    font-size:32rpx;
    font-weight: bold;
    color: #333;
}
.order_status .date{
    flex:0 0 auto;
    font-size:24rpx;
    color:#999;
}/* order_status */

/* handbox */
.handbox {
    background-color: #fff;
    border-radius: 14rpx;
    display: flex;
    align-items: center;
    padding: 32rpx 37rpx;
    margin-bottom: 22rpx;
}

.handbox image {
    flex:0 0 auto;
    width: 86rpx;
    height: 86rpx;
    border-radius: 50%;
    margin-right: 30rpx;
}

.handbox .info{
    width: 0;
    flex:1;
}
.handbox .info .title{
    font-size: 32rpx;
    color: #333;
    font-weight: bold;
    margin-bottom: 20rpx;
}
.handbox .info .date{
    font-size: 24rpx;
    color: #999;
}
.handbox .look{
    flex:0 0 auto;
    font-size: 30rpx;
    color: #145CBF;
}
/* handbox */

/* card_list */
.card_list{
    padding: 0 26rpx 40rpx;
    background-color: #fff;
    border-radius:14rpx;
    margin-bottom: 24rpx;
    box-shadow:0rpx 6rpx 32rpx 0rpx rgba(209,209,209,0.2);
}
.card_list .card_item{
    padding: 35rpx 0;
    display: flex;
}
.card_list .card_item:not(:first-of-type){
    border-top:1rpx solid #EEEEEE;
}
.card_list .card_item .image{
    flex:0 0 auto;
    width: 156rpx;
    height: 122rpx;
    position: relative;
    overflow: hidden;
    border-radius:10rpx;
    margin-right: 28rpx;
}
.card_list .card_item .image image{
    width: 100%;
    border-radius:10rpx;
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translateX(-50%) translateY(-50%);
}
.card_list .card_item .info{
    width: 0;
    flex:1;
    line-height: 1em;
}
.card_list .card_item .info .section{
    display: flex;
}
.card_list .card_item .info .card_name_btn,
.card_list .card_item .info .card_name_v {
    margin-bottom: 27rpx;
}

.card_list .card_item .info .section .card_name{
    width: 0;
    flex:1;
    font-size:30rpx;
    color: #333;
    font-weight: bold;
}
.card_list .card_item .info .section .num{
    font-size:24rpx;
    color: #999;
}


.card_list .card_item .info .code_copy{
    align-items:center;
}

.card_list .card_item .info .section .code{
    width: 0;
    flex:1;
    font-size:26rpx;
    color: #333;
}

.card_list .card_item .info .section .copy{
    flex:0 0 auto;
    font-size:24rpx;
    color: #666;
    width: 98rpx;
    height: 46rpx;
    border:1rpx solid rgba(229,229,229,1);
    border-radius:10rpx;
    box-sizing: border-box;
    text-align: center;
    line-height: 44rpx;
}

.card_list .card_item .info>.title{
    font-weight: bold;
    font-size: 30rpx;
    color: #333;
    margin-bottom:18rpx;
}
.card_list .card_item .info>.num{
    font-size:24rpx;
    color: #999;
    margin-bottom:18rpx;
}
.card_list .total_v{
    text-align:right;
    font-size: 28rpx;
    color: #999;
}
.card_list .total_v .span{
    color: #145CBF;
}/* card_list */






/* order_info */
.order_info{
    padding:0 26rpx;
    background-color: #fff;
    border-radius:14rpx;
    box-shadow:0rpx 6rpx 32rpx 0rpx rgba(209,209,209,0.2);
    margin-bottom: 24rpx;

}
.order_info .title{
    height: 85rpx;
    font-size:30rpx;
    color: #333;
    line-height: 85rpx;
    border-bottom: 1rpx solid #E4E4E4;
    font-weight: bold;
}
.order_info .section{
    height: 81rpx;
    display: flex;
    align-items:center;
}
.order_info .section .span{
    flex:0 0 auto;
    font-size:26rpx;
    color: #999;
}
.order_info .section .p{
    width: 0;
    flex:1;
    text-align: right;
    font-size:26rpx;
    color: #333;
    padding: 0 0 0 10rpx;
}/* order_info */