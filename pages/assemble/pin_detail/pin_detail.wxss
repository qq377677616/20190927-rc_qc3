/* swiper_area */
.swiper_area{
  height: 100vw;
  position:relative;
}   
.swiper_area swiper{
  height: 100%;
}
.swiper_area swiper swiper-item{
  background-size:cover;
  background-repeat:no-repeat;
  background-position: center center;
}
.swiper_area swiper swiper-item button{
  width: 100%;
  height: 100%;
}
.swiper_area .dots{
  display:flex;
  position:absolute;
  bottom:43rpx;
  left:50%;
  z-index:1;
  transform:translatex(-50%);
}
.swiper_area .dots .dot_item{
  width:8rpx;
  height:8rpx;
  border-radius: 50%;
  background-color:#fff;
  margin-left:5rpx;
  margin-right:5rpx;
  position: relative;
}
.swiper_area .dots .dot_item .tiao{
  position: absolute;
  left: 0;
  top: 0;
  height: 8rpx;
  width: 0;
  opacity:0;
  border-radius: 8rpx;
  background-color: #fff;
  transition:width 500ms ease-in-out,opacity 500ms ease-in-out;
}
.swiper_area .dots .dot_item.active .tiao{
  width: 26rpx;
  opacity:1;
}/* swiper_area */

