/* pages/test/test.wxss */


page{
    height: 100%;
    background-color: #F0F0F0;
}
.yuyueshijia_form_page{
    padding: 28rpx;
}

/* bind_btn */
.bind_btn{
    width: 590rpx;
	height: 90rpx;
	border: 1rpx solid rgba(95, 135, 255, 1);
	border-radius: 10rpx;
	margin: 0 auto;
	font-size: 36rpx;
    color: #20A1E0;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 20rpx;
}/* bind_btn */

/* tips */
.tips{
    font-size: 30rpx;
    color: #999;
    text-align: center;
    margin-bottom: 20rpx;
}/* tips */


/* form_area */
.form_area{
    padding: 40rpx 30rpx;
    background-color: #fff;
    border-radius:14rpx;
}
.form_area .group{
    display: flex;
    align-items: center;
    margin-bottom: 30rpx;
}
.form_area .group .label{
    flex:0 0 auto;
    font-size: 30rpx;
    color: #333;
    width: 120rpx;
    margin-right: 32rpx;
    text-align-last:justify;
	text-align:justify;
    text-justify:distribute-all-lines; 
    letter-spacing: 0;
}
.form_area .group input{
    flex:1;
    height: 60rpx;
    padding: 0 20rpx;
    background-color: #F5F5F5;
    border-radius:6rpx;
    font-size: 30rpx;
    color: #333;
}
.form_area .group input::placeholder{
    color: #999;
}
.form_area .group .code_btn{
    flex:0 0 auto;
    width: 200rpx;
    height: 60rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 30rpx;
    color: #fff;
    background:linear-gradient(to left,rgba(18,77,184,1),rgba(32,161,224,1));
    border-radius:6rpx;
    margin-left: 20rpx;
}
.form_area .group .location{
    width: 0;
    flex:1;
    padding: 0 26rpx;
    height: 60rpx;
    display: flex;
    align-items: center;
    background-color: #F5F5F5;
    border-radius:6rpx;
}
.form_area .group .location .span{
    width: 0;
    flex:1;
    font-size: 30rpx;
    color: #666;
    text-align: center;
}
.form_area .group .location .icon{
    flex:0 0 auto;
    font-size: 30rpx;
    color: #666;
}
.form_area .submit{
    width: 590rpx;
    height: 90rpx;
    background:linear-gradient(to left,rgba(18,77,184,1),rgba(32,161,224,1));
    border-radius:10rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 36rpx;
    color: #fff;
    margin: 0 auto;
}
.bg,.page1 .con,.popup{position: fixed;width:100%;height:100%;left:0;top:0;z-index: 0;}
.page1{position: absolute;width:100%;left:0;top:0;}
.con{z-index: 5}
.rule{width:100rpx;height:40rpx;line-height: 40rpx;border-radius:40rpx;font-size:24rpx;color:#fff;position: absolute;top:26rpx;right:13rpx;border:1rpx solid #fff;text-align: center;}
.start{width:514rpx;height:80rpx;line-height: 80rpx;text-align: center;border-radius: 14rpx;background: #303030;font-size: 32rpx;color:#fff;left:calc(50% - 257rpx);bottom:114rpx;position: absolute;}
.popup{z-index: 100;background: rgba(0,0,0,.7);}
.popup .box{width:85%;height:67%;border-radius: 40rpx;background: #fff;position: relative;padding:40rpx;box-sizing: border-box;}
.popup image{width:100%;}
.popup .close-btn{width:52rpx;height:52rpx;position: absolute;right:-40rpx;top:-40rpx;}
.popup scroll-view{width: 100%;height:100%;font-size: 28rpx;}

