/* pages/o_card_bag_rule/o_card_bag_rule.wxss */

page{
    height: 100%;
    background-color: #F1F1F1;
}
.o_card_bag_rule_page{
    padding: 25rpx 28rpx;
}

/* main_container */
.main_container{
    border-radius:12rpx;
    background-color: #fff;
    padding: 0 28rpx 80rpx;
}

.tips{
    height: 99rpx;
    font-size: 30rpx;
    color: red;
    line-height: 99rpx;
    border-bottom: 1rpx solid #EEE;
}
.name_status{
    padding: 24rpx 0 24rpx;
    display: flex;
    font-size: 30rpx;
    font-weight: bold;
}
.name_status .name{
    width: 0;
    flex:1;
    color: #333;
}
.name_status .status{
    flex:0 0 auto;
    color: #F1403E;
}

.date{
    font-size: 26rpx;
    color: #F1403E;
    padding: 0 0 56rpx;
}
.card_num{
    margin: 0 auto 45rpx;
    width:auto;
    height: 88rpx;
    background-color: #F2F2F2;
    border-radius:12rpx;
    padding: 0 24rpx;
    font-size: 30rpx;
    color: #333;
    box-sizing: border-box;
    line-height: 88rpx;
    font-weight: bold;
	text-align: center;
}
.use_explain{
    padding: 56rpx 0 0;
    border-top: 1rpx solid #EEEEEE;
}
.use_explain .use_item{
    line-height: 50rpx;
}
.use_explain .use_item .title{
    font-size: 28rpx;
    color: #333;
	font-weight: bold;
}
.use_explain .use_item:not(:nth-child(1)){
	margin-top: 42rpx;
} 
.use_explain .use_item .p{
    font-size: 24rpx;
    color: #666;
    padding: 0 0 0 44rpx;
	margin-top: 34rpx;
}
.setline{
	line-height: 40rpx;
}
