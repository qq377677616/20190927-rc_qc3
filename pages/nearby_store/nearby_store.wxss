/* pages/nearby_store/nearby_store.wxss */

page{
    height: 100%;
    background-color: #F0F0F0;
}
.nearby_store_page{
    padding: 40rpx 28rpx;
    
}

.main_container{
    background-color: #fff;
    border-radius:14rpx;
    padding: 0 25rpx;
}

.title{
    height: 78rpx;
    line-height: 78rpx;
    font-size:28rpx;
    color:rgba(51,51,51,1);
    border-bottom: 1rpx solid #E4E4E4;
}

/* store_list */
.store_list{

}
.store_list .store_item{
    padding: 32rpx 0;
    display: flex;
}
.store_list .store_item:not(:last-of-type){
    border-bottom:1rpx solid #E4E4E4;
}
.store_list .store_item .image{
    flex:0 0 auto;
    width: 225rpx;
    height: 175rpx;   
    border-radius:10rpx;
    overflow: hidden;
    position: relative;
    margin-right: 26rpx;
}
.store_list .store_item .image image{
    border-radius:10rpx;
    width: 100%;
    position: absolute;
    left: 50%;
    top: 50%;
    transform:translatex(-50%) translatey(-50%);
}
.store_list .store_item .store_info{
    width: 0;
    flex:1;
    font-size: 24rpx;
    color:#666;
}
.store_list .store_item .store_info .store_name{
    font-size:30rpx;
    font-weight:bold;
    color:#333;
    margin-bottom: 36rpx;
}
.store_list .store_item .store_info .tel_dis{
    display: flex;
    margin-bottom: 26rpx;
}
.store_list .store_item .store_info .tel{
    width: 0;
    flex:1;
}
.store_list .store_item .store_info .dis{
    flex:0 0 auto;
}
.store_list .store_item .store_info .span{
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp:2;
    -webkit-box-orient: vertical;
}/* store_list */