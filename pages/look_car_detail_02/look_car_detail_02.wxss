/* pages/look_car_detail_02/look_car_detail_02.wxss */

page {
    height: 100%;
    background-color: #fff;
}

.look_car_detail_page {
    display: flex;
    flex-direction: column;
    height: 100%;
}

/* nav_area */

.nav_area {
    flex: 0 0 auto;
    display: flex;
    height: 80rpx;
    background: #fff;
    position: relative;
}

.nav_area .nav_item {
    flex: 1;
    font-size: 28rpx;
    color: #333;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    font-weight: bold;
    transition: all .3s linear;
}

.nav_area .nav_item.active {
    color: #fff;
}

.nav_area .bg {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 50%;
    height: 100%;
    background: #999;
    z-index: 0;
    transition: all .3s linear;
}

.nav_area .nav_item.active::after {
    background-image: linear-gradient(to left, rgba(18, 77, 184, 1), rgba(32, 161, 224, 1));
}

/* main */

.main {
    height: 0;
    flex: 1;
}

.main .image_item {
    width: 100%;
}

.main .image_item image {
    width: 100%;
}

/* footer */

.footer {
    flex: 0 0 auto;
    height: 130rpx;
    background-image: linear-gradient(to left, rgba(18, 77, 184, 1), rgba(32, 161, 224, 1));
    color: #fff;
    font-size: 30rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

.forms-box {
    position: fixed;
    width: 100%;
    height: 100%;
    left: 0;
    top: 0;
    z-index: 999;
}
.group .li{border-top:1rpx solid #e6e6e6;padding:6rpx 40rpx;color:#333;background: #f5f5f5;min-height: 68rpx;position: relative;}
.group .li.gray::after{content:"";display: block;border-right:1rpx solid #e6e6e6;position: absolute;left:50%;top:0;height:100%;width:1rpx;}
.group .li .lable{flex:1;padding-right: 40rpx;}
.group .li .span{flex:1;text-align: center;color:#999;}
.group .li .lable, .group .li .span{line-height: 1.5;font-size: 26rpx;}
.group .li.remarks .lable{padding-right: 0;}
.group .li.remarks .span{flex:5;text-align: left;}
.select_car{width:80rpx;height:80rpx;border-radius: 50%;background-image: linear-gradient(to left, rgba(18, 77, 184, 1), rgba(32, 161, 224, 1));position: fixed;right: 28rpx;top:50%;transform: translateY(-50%);z-index: 900;animation: shadow .6s infinite alternate;}
.select_car .text{font-size: 20rpx;color:#fff;}
.select_car .picker{position: absolute;width:100%;height:100%;left:0;top:0;}
.icon-box{position: fixed;right:0;bottom:215rpx;z-index: 500;}
.icon-box .li{width:130rpx;}
.icon-box .li:nth-child(3){width:140rpx;position: relative;right:10rpx;}
.icon-box .li image{width:100%;}
.icon-box .li:not(:last-child){margin-bottom: 12rpx;}
@keyframes shadow {
  0%{ box-shadow: 0 0 0rpx 2rpx rgba(32, 161, 224, 1);}
  100%{ box-shadow: 0 0 10rpx 4rpx rgba(32, 161, 224, 1);}
}