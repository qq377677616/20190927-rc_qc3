/* start_cut */

.start_cut{
  width: 100%;
  height: 100%;
  background-color: #000;
  background:rgba(0,0,0,0.7);
  position: fixed;
  top: 0;
  left: 0;
}

.start_cut .p_con{
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 497rpx;
  border-radius: 30px 30px 0px 0px;
  background-color: #fff;
}

.p_con .con_top{
  display: flex;
  justify-content: space-between;
  padding: 40rpx 28rpx 0;
}

.p_con .con_top .top{
  display: flex;
  align-items: center;
}

.p_con .con_top .top .zs{
