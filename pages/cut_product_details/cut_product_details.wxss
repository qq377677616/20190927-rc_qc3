/* draw */

  .draw{
    overflow: hidden;
    width: 100%;
    height: 100%;
    background-color: #000;
    background:rgba(0,0,0,0.7);
    position: fixed;
    top: 0;
    left: 0;
  }

  .draw .draw_bg{
    position: fixed;
    bottom: 0;
    width: 100%;
    height: 304rpx;
    background-color: #fff;
  }

   .draw .draw_bg .top{
     display: flex;
   }

   .draw .draw_bg .top .pic{
     width: 246rpx;
     height: 196rpx;
     background-size: cover;
     margin-top: -50rpx;
     margin-left: 35rpx;
   }

   .draw .draw_bg .top .pic_right{
     margin-left: 29rpx;
     margin-top: 40rpx;
     display: flex;
     flex-direction: column;
   }
  .draw .draw_bg .top .pic_right .txt1{
    font-size: 32rpx;
    color: #333;
  }

  .draw .draw_bg .top .pic_right .txt2{
    margin-top: 24rpx;
    font-size: 22rpx;
    color: #999;
  }

  .draw .draw_bg .top .x{
    position: absolute;
    right: 3%;
    top: 3%;
  }

  .under{
    position: absolute;
    bottom: 0;
    width: 100%;
    height: 88rpx;
    border-top: 1rpx solid #E8E8E8;
    display: flex;
    align-items: center;
  }

  .under .dh{
    font-size: 28rpx;
    color: #A3A3A3;
    margin-left: 34rpx;

  }

  .under .add{
    display: flex;
    margin-left: 13rpx;
  }

  .reduce,.add_num,.num{
    display: flex;
    justify-content: center;
    align-items: center;
    width: 38rpx;
    height: 38rpx;
    border:1rpx solid #333;
  }

  .add .num{
    width: 52rpx;
    height: 38rpx;
  }
  
  .add .add_num{
    background-color: #333;
    color: #fff;
  }

  .stock{
    margin-left: 31rpx;
    font-size: 28rpx;
    color: #A3A3A3;
  }

  .under .btn_com{
    width: 248rpx;
    height: 88rpx;
    background:linear-gradient(90deg,rgba(32,161,224,1),rgba(34,116,208,1));
    position: absolute;
    right: 0;
    bottom: 0;
    font-size: 28rpx;
    color: #FFF;
    display: flex;
    justify-content: center;
    align-items: center;
  }


