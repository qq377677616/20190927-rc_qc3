/* pages/ev/ev_form/ev_form.wxss */

.title {
  width: 100%;
  margin-top: 42rpx;
  display: flex;
  justify-content: center;
}

.ev_form_title {
  width: 392rpx;
}

.bottom{
  width: 100%;
  position: relative;
  margin-top: -120rpx;
}

.ev_index-bom{
  width: 100%; 
  position: absolute;
  top: 0;
  bottom: 0;
}

.form {
  width: 692rpx;
  margin: 0 auto;
}

.f-tit {
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #666;
  margin-top: 34rpx;
}

.input {
  width: 100%;
  height: 76rpx;
  line-height: 76rpx;
  padding: 0 20rpx;
  margin-top: 25rpx;
  box-sizing: border-box;
  background: #f5f5f5;
  position: relative;
}

.placeholder {
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #333;
}

.wh1 {
  width: 477rpx;
}

.phone {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.code-btn {
  width: 196rpx;
  height: 76rpx;
  border: 1rpx solid #d2d2d2;
  border-radius: 10rpx;
  line-height: 76rpx;
  text-align: center;
  margin-top: 25rpx;
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #333;
  box-sizing: border-box;
}

.sanjiao {
  width: 0;
  height: 0;
  border-right: 5px solid transparent;
  border-left: 5px solid transparent;
  border-top: 5px solid #515151;
  position: absolute;
  right: 32rpx;
  top: 50%;
  transform: translateY(-50%);
}

.picker {
  width: 100%;
  height: 76rpx;
  display: flex;
  align-items: center;
  position: absolute;
  z-index: 1;
}

.two {
  display: flex;
  justify-content: space-between;
}

.time {
  display: flex;
  flex-direction: column;
  width: 300rpx;
}

.wh-time {
  width: 100%;
}

.submit {
  width: 534rpx;
  height: 84rpx;
  background: #002870;
  border-radius: 10rpx;
  line-height: 84rpx;
  text-align: center;
  font-size: 32rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #FFF;
  margin: 56rpx auto 0rpx;
  position: relative;
  z-index: 9;
}
