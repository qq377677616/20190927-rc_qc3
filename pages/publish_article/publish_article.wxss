/* pages/publish_article/publish_article.wxss */

page{
    height: 100%;
    background-color: #fff;
}
.publish_article_page{
    border-top:10rpx solid #F4F4F4;
    padding: 0 38rpx 174rpx;
}

/* article_title article_content */
.article_title{
    border-bottom:2rpx solid rgba(240,240,240,1);
}
.article_title,
.article_content{
    padding: 30rpx 0 0;
}
.article_title .h4,
.article_content .h4{
    font-size:36rpx;
    font-weight:bold;
    color:rgba(51,51,51,1);
}
.article_title input{
    font-size:28rpx;
    color:rgba(51,51,51,1);
    height: 67rpx;
}
.article_content textarea{
    width: 100%;
    height: 283rpx;
    font-size:28rpx;
    color:rgba(51,51,51,1);
    padding: 21rpx 0;
}
.article_title input::placeholder,
.article_title textarea::placeholder{
    color:rgba(163,163,163,1);
}/* article_title article_content */

/* upload_list */
.upload_list{
    display: flex;
    flex-wrap:wrap;
    align-content: flex-start;
    align-items:flex-start;
    margin-bottom: -22rpx;
    margin-left: -22rpx;
}
.upload_list .upload_item.image,
.upload_list .upload_default.image{
    background-color: #F2F2F2;
    width: 210rpx;
    height: 146rpx;
    position: relative;
    margin-bottom: 22rpx;
    margin-left: 22rpx;
}
.upload_list .upload_item.video,
.upload_list .upload_default.video{
    background-color: #F2F2F2;
    width: 100%;
    height: 378rpx;
    position: relative;
    margin-bottom: 22rpx;
    margin-left: 22rpx;
}
.upload_list .upload_item .image{
    width: 100%;
    height: 100%;
    background-size: cover;
    background-repeat: no-repeat;
    background-position: center center;
}
.upload_list .upload_item .delete_btn{
    position: absolute;
    right: 0;
    top: 0;
    transform:translatex(50%) translatey(-50%);
    background-color: rgba(0,0,0,0.5);
    background-clip:padding-box;
    background-origin: content-box; 
    border-radius:50%;
    width: 32rpx;
    height: 32rpx;
    border:20rpx solid transparent;
}
.upload_list .upload_item .play_btn{
    position: absolute;
    left: 50%;
    top: 50%;
    transform:translatex(-50%) translatey(-50%);
    width: 86rpx;
    height: 86rpx;
    border-radius:50%;
    background-color: rgba(0,0,0,0.5);
    background-clip:padding-box;
    background-origin: content-box; 
}
.upload_list .upload_default{
    display: flex;
    align-items: center;
    justify-content: center;
}
.upload_list .upload_default .icon{
    font-size: 50rpx;
    color: #D7D7D7;
}/* upload_list */

/* submit_btn */
.submit_btn{
    margin-top: 64rpx;
    height: 90rpx;
    background:linear-gradient(to left,rgba(34,95,197,1),rgba(32,161,224,1));
    border-radius:10rpx;
    display: flex;
    align-items:center;
    justify-content: center;
    font-size:30rpx;
    color:rgba(255,255,255,1);
    font-weight:bold;
    box-shadow:0 10rpx 10rpx rgba(32,161,224,0.4);
}/* submit_btn */