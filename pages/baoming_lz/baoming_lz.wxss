.whole{
	width: 100vw;
	min-height: 100vh;
	background-color: #F0F0F0;
	padding-top: 40rpx;
	box-sizing: border-box;
}
.centerBox{
	width: 694rpx;
	margin: 0 auto;
}
.handBox{
	width: 100%;
	height:225rpx;
	background-color: white;
	border-radius: 14rpx;
	display: flex; 
	align-items: center;
	padding:25rpx;
	box-sizing: border-box; 
}
.left_img{
	width:200rpx;
	height: 176rpx; 
	background: center no-repeat;
	background-size: cover;
	border-radius: 10rpx;
}
.right_info{
	height: 176rpx;
	padding-left:30rpx;
	box-sizing: border-box; 
}
.shopName{
	display: block;
	margin-top:29rpx; 
	font-size:30rpx;
	color: #333;
	font-weight: 600; 
	width: 300rpx;
}
.shopPrice{
	display: block;
	margin-top: 39rpx;
	font-size:24rpx;
	color: #333; 
	width: 300rpx;
}
.addstyle{
	color:#999;
	margin-left: 17rpx; 
}
.bindIphone{
	width: 590rpx;
	border: 1rpx solid rgba(95,135,255,1);
	height: 90rpx;
	border-radius: 10rpx;
	margin: 0 auto;
	margin-top: 26rpx;
	text-align: center;
	line-height: 90rpx;
	font-size: 36rpx;

}
.bindIphone>text{
	font-weight: bold;
	color: rgba(255,255,255,1);
	background:linear-gradient(0deg,rgba(18,77,184,1) 0%, rgba(32,161,224,1) 100%);
    -webkit-background-clip:text;
    -webkit-text-fill-color:transparent;
}
.useOther{
	margin: 0 auto;
	color:#999;
	font-size: 30rpx;
	text-align: center;
	margin-top:22rpx;  
}
.lz_box{
	width: 100%;
	min-height:700rpx;
	background-color: white;
	margin-top: 20rpx;
	border-radius: 14rpx;
	padding: 41rpx 33rpx 20rpx 40rpx;
	box-sizing: border-box;
}
.row_box{
	width: 100%;
	height:60rpx;
	display: flex; 
}
.lz_box>.row_box:not(:nth-child(1)){
	margin-top: 30rpx;
}
.row_box>view:nth-child(1){
	width: 153rpx;
	display: flex;
	align-items: center;
}
.row_box>view:nth-child(2){
	flex: 1;
	background-color: #F5F5F5;
	display: flex;
	align-items: center;
	border-radius: 6rpx;
	justify-content: space-between;
}
.labels{
	font-size: 30rpx;
	color: #333;
}
.setLet{
	letter-spacing: 27rpx;
}
.ipt{
	width: 90%;
	margin-left: 19rpx;
	font-size:30rpx; 
}
.codeIpt{
	width:250rpx;
	height: 100%;
	display: flex;
	align-items: center;
	background-color:#F5F5F5;
}
.codeIpt>input{
	font-size: 30rpx;
	margin-left: 19rpx; 
}
.codeBtn{
	width: 200rpx;
	height: 100%;
	background:linear-gradient(90deg,rgba(18,77,184,1),rgba(32,161,224,1));
	text-align: center;
	line-height:60rpx;
	color:#FEFEFE;
	font-size: 30rpx; 
	border-radius: 6rpx;
}
.nobg{
	background-color: transparent !important;
}
.agreeDom{
	width: 100%;
	text-indent: 50rpx;
	margin-top:46rpx; 
	position: relative;
}
.agreeDom>text{
	color: #ccc;
	font-size: 24rpx;
}
.noAgree{
	position: absolute;
	left: 0;
	top: 12rpx;
	width:25rpx;
	height: 25rpx;
	border-radius: 50%;
	border: 1rpx  solid #1B86D3; 
}
.receive{
	width:590rpx;
	height: 90rpx;
	background:linear-gradient(90deg,rgba(18,77,184,1),rgba(32,161,224,1)); 
	border-radius:10rpx;
	margin-top:60rpx;  
	color: white;
	font-size: 36rpx;
	text-align: center;
	line-height: 90rpx;
}
.locationBox{
	position: relative;
	justify-content: center !important;
	align-items: center !important;
}
.picker{
	display: flex;
	/* justify-content: center; */
	align-items: center;
}
.locationBox text{
	color:#666;
	font-size: 30rpx;
	display: block;
	width: 360rpx;
	margin-left: 19rpx;
}
.locationBox>image{
	width:22rpx;
	height: auto;
	position: absolute;
	right: 29rpx; 
}
.picker{
	width: 100%;
	height: 100%;
}
.zyd_box{
	justify-content: center !important;
	color: #666;
	font-size: 30rpx;
	position: relative;
}
.down_triangle{
	width:0;
	height:0;
	border-right:12rpx solid transparent;
	border-left:12rpx solid transparent;
	border-top:12rpx solid #CDCDCD;
	position: absolute;
	right: 43rpx;
}
.lz_succ{
	width: 100vw;
	height: 100vh;
	background-color: #7F7F7F;
	position: fixed;
	left: 0;
	top: 0;
	display: flex;
	justify-content: center;
	align-items: center;
	z-index: 999;
}
.succPop{
	width:560rpx;
	height: 506rpx;
	background-color: white;
	border-radius: 14rpx;
	padding-top: 107rpx;
	box-sizing: border-box;
	position: relative;
}
.succPop>text{
	display: block;
	width: 100%;
	text-align: center;
}
.succtxt{
	color:#333;
	font-size: 34rpx;
	font-weight: 600; 
}
.waittxt{
	margin-top:28rpx;
	color: #999999;
	font-size: 24rpx; 
}
.comfirBtn{
	width:343rpx;
	height:64rpx;
	text-align: center;
	line-height:64rpx;
	background:linear-gradient(90deg,rgba(32,161,224,1),rgba(18,77,184,1));
	border-radius: 64rpx;
	color: #F5F5F5;
	margin: 0 auto;
	margin-top:80rpx;  
}
.look_other{
	margin-top: 40rpx;
	font-size:28rpx;
	color: #333; 
}
.icon_close{
	width:50rpx;
	height: auto;
	position: absolute;
	left: 50%;
	transform: translateX(-50%);
	bottom: -130rpx;
}