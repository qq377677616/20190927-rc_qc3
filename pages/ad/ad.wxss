/* pages/ad/ad.wxss */

page{
  height: 100%;
}

.ad{
  height: 100%;
  background-position: center center;
}

.time{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background:rgba(255,255,255,1);
  opacity:0.53;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: absolute;
  top: 15%;
  right: 5%;
}

.time view{
  font-size: 24rpx;
  color: #333;
}

.ad .screen{
  width: 100%;
  height: 100%;
  position: fixed;
  background-size: cover;
  background-position: center center;
}