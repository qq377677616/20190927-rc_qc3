/* pages/payment/pay_index/pay_index.wxss */
@import "/assets/iconfont/iconfont_03.wxss";

.img {
  width: 100%;
}

.img_bg {
  width: 100%;
}

.btn {
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  position: absolute;
  top: 38%;
  left: 50%;
  transform: translateX(-50%);
}

.main .rule {
  min-width: 153rpx;
  height: 60rpx;
  color: #fff;
  position: absolute;
  left: 0;
  top: 34rpx;
  box-sizing: border-box;
  padding: 0 0 0 19rpx;
  border-radius: 0rpx 30rpx 30rpx 0;
  background-color: rgba(0, 0, 0, 0.2);
  display: flex;
  align-items: center;
}

.main .rule2 {
  min-width: 160rpx;
  height: 60rpx;
  color: #fff;
  position: absolute;
  top: 34rpx;
  box-sizing: border-box;
  padding: 0 0 0 19rpx;
  background-color: rgba(0, 0, 0, 0.2);
  display: flex;
  align-items: center;
  right: 0;
  border-radius: 30rpx 0rpx 0rpx 30rpx;
}

.main .rule3 {
  min-width: 160rpx;
  height: 60rpx;
  color: #fff;
  box-sizing: border-box;
  padding: 0 0 0 19rpx;
  background-color: rgba(0, 0, 0, 0.2);
  display: flex;
  align-items: center;
  position: absolute;
  width: 155rpx;
  top: 114rpx;
  right: 0;
  border-radius: 30rpx 0rpx 0rpx 30rpx;
}

.main .rule .text, .main .rule2 .text, .main .rule3 .text {
  font-size: 26rpx;
}

.main .rule .icon, .main .rule2 .icon, .main .rule3 .icon {
  font-size: 26rpx;
}

/* bottom */

.bottom {
  width: 694rpx;
  border-radius: 20rpx;
  background: #fff;
  margin: 0 auto;
  padding-top: 47rpx;
  margin-top: -300rpx;
  margin-bottom: 35rpx;
}

.bottom .title {
  text-align: center;
  font-size: 32rpx;
  color: #fd4f4e;
  /* padding-bottom: 17rpx; *//* margin-top: 37rpx; */
}

.bottom .title image {
  width: 361rpx;
}

.prize-list {
  margin: 36rpx auto 0;
  padding: 0rpx 30rpx;
  box-sizing: border-box;
  position: relative;
  background: white;
  box-shadow: 0rpx 5rpx 28rpx 0rpx rgba(209, 209, 209, 0.2);
  border-radius: 16rpx;
}

.prize-list::after {
  content: "";
  display: block;
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
}

.p-header, swiper-item {
  font-size: 24rpx;
  color: #124fb9;
  font-family: PingFang-SC-Bold;
}

swiper {
  /* height: 384rpx; */
}

.p-header view, swiper-item view {
  width: 28%;
  height: 96rpx;
  line-height: 96rpx;
  text-align: center;
}

swiper-item {
  height: 96rpx;
  color: #333;
  font-size: 24rpx;
  border-bottom: 1rpx dashed #f7efe6;
}

.p-header .text, swiper-item .text {
  width: 44%;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

/* 中奖弹窗 */

.prize-con {
  width: 100%;
  height: 100vh;
  position: fixed;
  background: rgba(0, 0, 0, 0.6);
  left: 0;
  top: 0;
}

.prize-bg {
  width: 650rpx;
  height: 757rpx;
  background: center no-repeat;
  background-size: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  position: relative;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
}

.txt1 {
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  margin-top: 257rpx;
}

.prize-title {
  font-size: 36rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #e7120e;
  margin-top: 17rpx;
}

.prize-pic {
  width: 152rpx;
  height: 152rpx;
  overflow: hidden;
  margin-top: 22rpx;
}

.prize-pic image {
  width: 100%;
}

.prize-btn {
  width: 345rpx;
  height: 80rpx;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  bottom: 11%;
  border-radius: 35rpx;
}
