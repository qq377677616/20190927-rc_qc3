/* pages/payment/pay_cart/pay_cart.wxss */
page{
    height: 100%;
    background-color: #F5F5F5;
}
.shop_cart_next_page{
    padding: 28rpx 28rpx 108rpx;
}

/* form_area */
.form_area{
    border-radius:18rpx;
    padding: 0 32rpx;
    background-color: #fff;
    margin-bottom: 28rpx;
}
.form_area .group{
    min-height: 110rpx;
    display: flex;
    align-items: center;
}
.form_area .group{
    border-bottom:1rpx solid #F5F5F5;
}
.form_area .group .icon{
    flex:0 0 auto;
    font-size: 32rpx;
    color: #999;
    margin-right: 20rpx;
}
.form_area .group .span{
    width: 0;
    flex:1;
    font-size: 28rpx;
    color: #333;
}
.form_area .group .span view{
    line-height:1.8em;
}
.form_area .group .go{
    flex:0 0 auto;
    font-size: 32rpx;
    color: #999;
}/* form_area */


