.cart_list .cart_item .image{
    flex:0 0 auto;
    width: 134rpx;
    height: 134rpx;
    position: relative;
    overflow: hidden;
    border-radius:10rpx;
    margin-right: 20rpx;
}
.cart_list .cart_item .image image{
    width: 100%;
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translatex(-50%) translatey(-50%);
    border-radius:10rpx;
}
.cart_list .cart_item .info{
    width: 0;
    flex:1;
    line-height: 1em;
}
.cart_list .cart_item .info .title{
    font-size:28rpx;
    font-weight:bold;
    color:rgba(51,51,51,1);
    margin-bottom: 14rpx;
}
.cart_list .cart_item .info .specs{
    font-size:22rpx;
    color:rgba(153,153,153,1);
    margin-bottom: 30rpx;
}
.cart_list .cart_item .info .specs.no{
    visibility:hidden;
}
.cart_list .cart_item .info .v_num{
    display: flex;
    align-items: flex-end;
}
.cart_list .cart_item .info .v_num .v{
    flex:1;
    display: flex;
    align-items: center;
}
.cart_list .cart_item .info .v_num .v .v_mark{
    width: 30rpx;
    margin-right: 10rpx;
}
.cart_list .cart_item .info .v_num .v .span{
    font-size: 22rpx;
    color: #3F3F3F;
    font-weight: bold;
}
.cart_list .cart_item .info .v_num .num{
    flex:0 0 auto;
    font-size: 24rpx;
    color:#C9C9C9;
}
.cart_list .cart_item .info .v_num .sub_num_add{
    flex:0 0 auto;
    display: flex;
    align-items: center;
}
.cart_list .cart_item .info .v_num .sub_num_add .span{
    height: 38rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    box-sizing: border-box;
}
.cart_list .cart_item .info .v_num .sub_num_add .span.sub{
    color: #333;
    font-size: 34rpx;
    width: 38rpx;
    border:1rpx solid #333;
}
.cart_list .cart_item .info .v_num .sub_num_add .span.num{
    color: #333;
    font-size: 28rpx;
    min-width: 50rpx;
    border-top:1rpx solid #333;
    border-bottom:1rpx solid #333;
}
.cart_list .cart_item .info .v_num .sub_num_add .span.add{
    color: #fff;
    font-size: 34rpx;
    background-color: #333;
    width: 38rpx;
    border:1rpx solid #333;
}
