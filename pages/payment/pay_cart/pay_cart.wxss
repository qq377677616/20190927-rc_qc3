/* footer */
.footer{
    position: fixed;
    left: 0;
    bottom: 0;
    display: flex;
    width: 100%;
    height: 108rpx;
    background-color: #333;
    font-size: 28rpx;
    font-weight: bold;
    color: #fff;
    padding-left: 52rpx;
    box-sizing: border-box;
    line-height: 1em;
}
.footer .total{
    width: 0;
    flex:1;
    align-self:center;
}
.footer .btn{
    flex:0 0 auto;
    align-self:stretch;
    background:linear-gradient(to left,rgba(34,116,208,1),rgba(32,161,224,1));
    width: 235rpx;
    display: flex;
    align-items: center;
    justify-content: center;

}/* footer */