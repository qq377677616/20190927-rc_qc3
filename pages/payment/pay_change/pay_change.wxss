/* pages/payment/pay_change/pay_change.wxss */

.main {
  padding-bottom: 30rpx;
}

page {
  width: 100%;
  height: 100%;
  background: #f5f5f5;
}

.banner {
  width: 100%;
  height: 324rpx;
  overflow: hidden;
}

.banner image {
  width: 100%;
}

.list-bg {
  display: flex;
  justify-content: center;
}

.bg {
  width: 694rpx;
  height: 204rpx;
  background: rgba(255, 255, 255, 1);
  border-radius: 8rpx;
  margin-top: 30rpx;
  display: flex;
  align-items: center;
}

.list {
  height: 176rpx;
  display: flex;
}

.left {
  width: 176rpx;
  height: 176rpx;
  border-radius: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 11rpx;
  overflow: hidden;
}

.left image {
  width: 100%;
}

.right {
  display: flex;
  flex-direction: column;
  margin-left: 19rpx;
  position: relative;
}

.r-txt1 {
  width: 400rpx;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #333;
}

.jindu {
  width: 228rpx;
  height: 24rpx;
  background: rgba(239, 53, 23, 0.1);
  border-radius: 12rpx;
  margin-top: 55rpx;
  position: relative;
}

.jindutiao {
  width: 40%;
  height: 24rpx;
  background: rgba(241, 64, 62, 1);
  border-radius: 12rpx;
  position: absolute;
  top: 0;
  left: 0;
}

.j-txt {
  font-size: 18rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: #fff;
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  left: 23rpx;
  z-index: 1;
}

.v-dou {
  display: flex;
  align-items: center;
  margin-top: 23rpx;
}

.v-dou image {
  width: 34rpx;
}

.v-txt {
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: rgba(239, 139, 6, 1);
  margin-left: 10rpx;
}

.v-btn {
  width: 168rpx;
  height: 54rpx;
  background: linear-gradient(90deg, rgba(239, 77, 74, 1), rgba(223, 51, 48, 1));
  border-radius: 27rpx;
  position: absolute;
  bottom: 10%;
  right: -15%;
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #fff;
  line-height: 54rpx;
  text-align: center;
}

.v-btn2 {
  background: linear-gradient(90deg, rgba(129, 128, 130, 1), rgba(172, 171, 173, 1));
  color: #F9F9F9;
}
