/* pages/spike_index/spike_index.wxss */

page {
  background-color: #f5f5f5;
}

/* header */

.header {
}

.header .banner {
  height: 324rpx;
  position: relative;
  overflow: hidden;
}

.header .banner .img {
  width: 100%;
}

.header .banner .rule-btn {
  position: absolute;
  right: 0;
  top: 34rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  min-width: 142rpx;
  height: 48rpx;
  border: 1px solid rgba(255, 255, 255, 0.4);
  border-right: none;
  box-sizing: border-box;
  border-top-left-radius: 23rpx;
  border-bottom-left-radius: 23rpx;
  background-color: rgba(0, 0, 0, 0.1);
}

.header .banner .rule-btn .span {
  font-size: 23rpx;
  color: #fff;
}

.header .banner .rule-btn .more {
  font-size: 23rpx;
  color: #fff;
}

.header .scroll-info {
  height: 73rpx;
  padding-right: 10rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
}

.header .scroll-info .icon {
  flex: 0 0 auto;
  width: 28rpx;
  margin: auto 26rpx;
}

.header .scroll-info swiper {
  flex: 1;
  align-self: stretch;
  height: 100%;
}

.header .scroll-info swiper swiper-item {
  height: 100%;
  font-size: 28rpx;
  color: #333;
  line-height: 73rpx;
}

/* show-time */

.show-time {
  width: 92%;
  height: 188rpx;
  margin: 24rpx auto auto;
  background-color: #fff;
  box-shadow: 0rpx 1rpx 1rpx 0rpx rgba(204, 204, 204, 0.35);
  border-radius: 10rpx;
  box-sizing: border-box;
  position: relative;
  overflow: hidden;
}

.show-time .date, .show-time .hours {
  position: absolute;
  left: 0;
  width: 100%;
}

