.show-time .date {
  top: 28rpx;
}

.show-time .hours {
  bottom: 28rpx;
}

.show-time .date .view, .show-time .hours .view {
  white-space: nowrap;
}

.show-time .date .span {
  white-space: nowrap;
  text-align: center;
  width: 25%;
  display: inline-block;
  font-size: 28rpx;
  color: #999;
}

.show-time .date .span::after {
  content: '';
  display: block;
  background-color: transparent;
  width: 94rpx;
  height: 6rpx;
  border-radius: 3rpx;
  margin: 11rpx auto auto;
}

.show-time .date .span.active {
  transform: scale(1.1);
  color: #ef3517;
}

.show-time .date .span.active::after {
  background-color: #ef3517;
  transform: scale(1.1);
}

.show-time .hours .span {
  width: 33.3%;
  text-align: center;
  display: inline-block;
  color: #999;
}

.show-time .hours .span.active {
  color: #333;
}

.show-time .hours .span text {
  white-space: nowrap;
  display: block;
}

.show-time .hours .span text:nth-of-type(1) {
  font-size: 30rpx;
}

.show-time .hours .span text:nth-of-type(2) {
  font-size: 22rpx;
}

/* count-down */

.count-down {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 54rpx;
  margin: 40rpx 0;
}

.count-down .text, .count-down .over {
  font-size: 30rpx;
  color: #333;
  font-weight: bold;
}

.count-down .text:first-of-type {
  margin-right: 18rpx;
}

.count-down .text:last-of-type {
  margin-left: 18rpx;
}

.count-down .span {
  font-size: 28rpx;
  color: #fff;
  min-width: 56rpx;
  height: 54rpx;
  line-height: 54rpx;
  text-align: center;
  white-space: nowrap;
}

.count-down .colon {
  font-size: 20rpx;
  color: #222;
  margin: auto 8rpx;
}

/* goods-list */

.goods-list {
  width: 92%;
  margin: auto;
}

.goods-list .item {
  background-color: #fff;
  border-radius: 8rpx;
  padding: 12rpx;
  display: flex;
  margin-bottom: 22rpx;
}

.goods-list .item .img {
  flex: 0 0 auto;
  width: 177rpx;
  height: 177rpx;
  border: 1rpx solid rgba(229, 229, 229, 1);
  background-color: #eee;
  border-radius: 10rpx;
  box-sizing: border-box;
  position: relative;
  overflow: hidden;
  margin-right: 16rpx;
}

.goods-list .item .img .label {
  width: 108rpx;
  position: absolute;
  left: 0;
  top: 0;
}

.goods-list .item .img .banner {
  width: 100%;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate3d(-50%, -50%, 0);
}

.goods-list .item .content {
  width: 0;
  flex: 1;
  position: relative;
}

.goods-list .item .content .title {
  display: flex;
  position: absolute;
  top: 0;
  width: 100%;
}

.goods-list .item .content .title .h2 {
  width: 0;
  flex: 1;
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}

.goods-list .item .content .title .text {
  flex: 0 0 auto;
  display: flex;
  font-size: 24rpx;
  padding-left: 10rpx;
}

.goods-list .item .content .title .text .em {
  color: #ff3836;
  font-weight: bold;
}

.goods-list .item .content .title .text .span {
  color: #999;
}

.goods-list .item .content .bottom {
  display: flex;
  align-items: center;
  position: absolute;
  bottom: 0;
  width: 100%;
}

.goods-list .item .content .bottom .progress-price {
  width: 0;
  flex: 1;
}

.goods-list .item .content .bottom .progress-price .progress {
  width: 228rpx;
  height: 24rpx;
  border-radius: 12rpx;
  background-color: #fdebe8;
  position: relative;
  overflow: hidden;
  margin-bottom: 26rpx;
}

.goods-list .item .content .bottom .progress-price .progress .bar {
  position: absolute;
  border-radius: 12rpx;
  width: 0;
  height: 100%;
  background-color: #ef3517;
}

.goods-list .item .content .bottom .progress-price .progress .text {
  position: absolute;
  width: 100%;
  height: 100%;
  font-size: 18rpx;
  color: #fff;
  line-height: 24rpx;
  padding: 0 22rpx;
  box-sizing: border-box;
}

.goods-list .item .content .bottom .progress-price .price {
}

.goods-list .item .content .bottom .progress-price .price .span {
  font-size: 36rpx;
  font-weight: bold;
  color: #ff3735;
  display: inline-block;
  margin-right: 8rpx;
}

.goods-list .item .content .bottom .progress-price .price .span:first-letter {
  font-size: 24rpx;
  font-weight: normal;
}

.goods-list .item .content .bottom .progress-price .price .del {
  font-size: 24rpx;
  color: #999;
  text-decoration: line-through;
  display: inline-block;
}

.goods-list .item .content .bottom .progress-price .price .del:first-letter {
  font-size: 18rpx;
  font-weight: normal;
}

.goods-list .item .content .bottom .btn {
  flex: 0 0 auto;
  width: 168rpx;
  height: 54rpx;
  border-radius: 27rpx;
  box-sizing: border-box;
  font-size: 24rpx;
  line-height: 52rpx;
  text-align: center;
}

.goods-list .item .content .bottom .btn.appo {
  background: linear-gradient(90deg, rgba(239, 77, 74, 1), rgba(223, 51, 48, 1));
  color: #fff;
  box-shadow: 0rpx 8rpx 8rpx 0rpx rgba(223, 51, 48, 0.4);
}

.goods-list .item .content .bottom .btn.appoed {
  border: 1rpx solid rgba(220, 220, 220, 1);
  background-color: #f9f9f9;
  color: #999;
}

.goods-list .item .content .bottom .btn.receive {
  background: linear-gradient(90deg, rgba(32, 161, 224, 1), rgba(18, 77, 184, 1));
  color: #fff;
  box-shadow: 0rpx 8rpx 8rpx 0rpx rgba(18, 77, 184, 0.4);
}

/* spike-log */

.spike-log {
  width: 84rpx;
  height: 84rpx;
  position: fixed;
  top: 70%;
  right: 5rpx;
  font-size: 22rpx;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: rgba(0, 0, 0, 0.7);
  border-radius: 50%;
}

/* qc-spike-result */

.qc-spike-result-icon {
  display: block;
  width: 118rpx;
  margin: auto auto 20rpx;
}

.qc-spike-result-status {
  text-align: center;
}

.qc-spike-result-status .h2 {
  font-size: 36rpx;
  line-height: 48rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.qc-spike-result-status.success .h2 {
  color: #333;
}

.qc-spike-result-status.fail .h2 {
  color: #f1403e;
}

.qc-spike-result-status .tips {
  font-size: 26rpx;
  color: #999;
  line-height: 36rpx;
}

.qc-spike-result-status .p {
  font-size: 36rpx;
  color: #333;
}

.qc-spike-result-p {
  font-size: 36rpx;
  color: #333;
  text-align: center;
  line-height: 48rpx;
  font-weight: bold;
  margin-bottom: 54rpx;
}

.qc-spike-result-p .date {
  color: #f1403e;
}

.qc-spike-result-btn {
  width: 332rpx;
  height: 60rpx;
  background: linear-gradient(90deg, rgba(32, 161, 224, 1), rgba(18, 77, 184, 1));
  border-radius: 30rpx;
  font-size: 30rpx;
  color: #fff;
  line-height: 60rpx;
  text-align: center;
  margin: 57rpx auto auto;
}

.qc-spike-result-cancel {
  width: 332rpx;
  height: 60rpx;
  font-size: 30rpx;
  color: #333;
  line-height: 60rpx;
  text-align: center;
  margin: 20rpx auto auto;
}

.qc-spike-result-tips {
  font-size: 26rpx;
  color: #f1403e;
  margin-top: 36rpx;
  text-align: center;
  line-height: 36rpx;
}

/* code_mask */

.code_mask {
  position: fixed;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  background-color: rgba(0, 0, 0, 0.4);
  z-index: 2;
}

.code_mask .main {
  width: 505rpx;
  text-align: center;
  padding: 60rpx 52rpx;
  border-radius: 30rpx;
  box-sizing: border-box;
  background-color: #fff;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translatex(-50%) translatey(-50%);
}

.code_mask .main .h3 {
  font-size: 30rpx;
  line-height: 46rpx;
}

.code_mask .main .p {
  width: 404rpx;
  height: 60rpx;
  background: #fef0f0;
  line-height: 60rpx;
  margin: 58rpx 0 50rpx;
  font-size: 26rpx;
  color: #f1403e;
}

.code_mask .main .btn {
  width: 332rpx;
  height: 70rpx;
  background: linear-gradient(-90deg, #124db8, #20a1e0);
  line-height: 70rpx;
  margin: 0 auto;
  border-radius: 70rpx;
  color: #fff;
  font-size: 28rpx;
}

.code_mask .main .close_btn {
  font-size: 50rpx;
  color: #fff;
  position: absolute;
  bottom: -100rpx;
  left: 50%;
  transform: translateX(-50%);
}

.code_mask .main .close_btn::after {
  content: "";
  display: block;
  width: 2rpx;
  height: 50rpx;
  background: linear-gradient(0, #fff, transparent);
  bottom: 90%;
  left: calc(50% - 1rpx);
  position: absolute;
}

/* forms-box */

.forms-box {
  position: fixed;
  width: 100vw;
  height: 100vh;
  left: 0;
  top: 0;
  z-index: 999;
}

/* yls */

.seticon {
  display: flex !important;
  align-items: center;
}

.seticon>image {
  width: 30rpx;
  height: auto;
  margin-left: 15rpx;
}

.btnPhone {
  width: 170rpx;
  height: 60rpx;
  border-radius: 35rpx;
  position: absolute;
  right: 0rpx;
  bottom: 10rpx;
  z-index: 1;
}
