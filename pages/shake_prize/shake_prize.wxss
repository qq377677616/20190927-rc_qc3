/* pages/shake_prize/shake_prize.wxss */
@import "/assets/iconfont/iconfont.wxss";

page {
  width: 100%;
  height: 100%;
  background: #f3f3f3;
}

.content {
  width: 100%;
  height: 100%;
  overflow: hidden;
}

.info {
  width: 694rpx;
  margin: 0 auto;
  background: #fff;
  border-radius: 14rpx;
  margin-top: 26rpx;
}

.info-list {
  width: 645rpx;
  height: 120rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin: 0 auto;
}

.border {
  border-bottom: 1rpx solid #eee;
}

.border-top{
  border-top: 1rpx solid #eee;
}

.left {
  display: flex;
  align-items: center;
}

.icon-wodexianxing {
  font-size: 40rpx;
}

.icon-shouyexianxing {
  font-size: 40rpx;
}

.icon_more {
  color: #a1a1a1;
}

.txt {
  margin-left: 26rpx;
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #333;
}

.prize {
  width: 694rpx;
  height: 200rpx;
  background: #fff;
  border-radius: 14rpx;
  margin: 23rpx auto 0;
  display: flex;
  align-items: center;
}

.pic {
  width: 156rpx;
  height: 155rpx;
  background-size: cover;
  background-position: center center;
  background-repeat: no-repeat;
  margin-left: 19rpx;
  border-radius: 10rpx;
}

.right {
  margin-left: 29rpx;
  display: flex;
  flex-direction: column;
  height: 155rpx;
}

.title {
  font-size: 30rpx;
  font-family: Source Han Sans CN;
  font-weight: 500;
  color: #333;
  margin-top: 18rpx;
}

.time {
  font-size: 24rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  color: #666;
  margin-top: 38rpx;
}

.btn {
  width: 100%;
  height: 99rpx;
  position: fixed;
  bottom: 0;
  background: linear-gradient(90deg, rgba(32, 161, 224, 1), rgba(18, 77, 184, 1));
  line-height: 99rpx;
  text-align: center;
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #fff;
}

.icon-kanche_xianxing{
  font-size: 40rpx;
}

.picker{
  width: 400rpx;
}
