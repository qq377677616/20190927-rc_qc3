page{
    background-color: #f5f5f5;
    height: 100%;
}
.o_address_page{
    height: 100%;
    display: flex;
    flex-direction: column;
    padding:0 0 90rpx;
    box-sizing: border-box;
}

/* address_list */
.address_list{
    height: 0;
    flex:1;
}
.content{
    padding: 28rpx 28rpx 0;
}
.address_item{
    background-color: #fff;
    padding: 38rpx;
    display: flex;
    border-radius:14rpx;
    transition:all 0.1s cubic-bezier(0.25,1,1,1);
    position: relative;
}
.address_item.left{
    transform:translatex(-142rpx);
}
.address_item.right{
    transform:translatex(0);
}
.address_item:not(:first-of-type){
    margin-top: 29rpx;
}
.address_item .checked{
    align-self:center;
    width: 36rpx;
    height: 36rpx;
    border:1rpx solid #E5E5E5;
    border-radius: 50%;
    margin-right: 26rpx;
    font-size: 26rpx;
    color: #fff;
    display: flex;
    align-items:center;
    justify-content: center;
}
.address_item .checked.active{
    background-color: #F23E3C;
    border-color:#F23E3C;
}
.address_item .info{
    width: 0;
    flex:1;
}

.address_item .info .name_tel{
    display: flex;
    align-items: flex-end;
    margin-bottom: 30rpx;
}
.address_item .info .name_tel .name{
   font-size: 30rpx;
   color: #333;
   margin-right: 40rpx;
}
.address_item .info .name_tel .tel{
    font-size: 26rpx;
    color: #999;
}
.address_item .info .address{
    display: flex;
    align-items: flex-end;
}
.address_item .info .address .default{
    flex:0 0 auto;
    padding: 6rpx 10rpx;
    background-color:rgba(241,64,62,0.1);
    font-size: 24rpx;
    color: #F1403E;
    margin-right: 30rpx;
}
.address_item .info .address .span{
    width: 0;
    flex:1;
    font-size: 28rpx;
    color: #333;
}
.address_item .edit{
    flex:0 0 auto;
    font-size:30rpx;
    color: #F1403E;
    display: flex;
    align-items:center;
    flex-wrap:nowrap;
}
.address_item .delete_btn{
    position: absolute;
    top: 0;
    right: -142rpx;
    width: 116rpx;
    height: 100%;
    font-size: 28rpx;
    color: #fff;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #F1403E;
    border-radius:14rpx;
}
/* goods_list */

/* add_btn */
.add_btn{
    position: fixed;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 90rpx;
    background:linear-gradient(to left,rgba(18,77,184,1),rgba(32,161,224,1));
    font-size: 30rpx;
    color: #fff;
    display: flex;
    align-items: center;
    justify-content: center;
}/* add_btn */
