            </view>
            
        </scroll-view><!-- nav_area -->

        <!-- list_area -->
        <view class="list_area">
            
            <scroll-view scroll-x>
                <view class="title">
                    <view class="title_item">
                        <view class="span">活动</view>
                        <view class="border"></view>
                    </view>
                </view>
            </scroll-view>

            <view class="list">

                <view wx:for="{{ activityList }}" wx:key="index" class="list_item {{ index%2 == 0 ? 'right' : 'left'}} fadeIn" style="background-image:url({{ item.thumb }});" data-index="{{ index }}" bindtap="activityJump">

                    <view class="describe">
                        
                        <view class="main">
                            <view class="span nowrap">
                                {{ item.title }}
                            </view>
                            <!-- <view class="time nowrap">
                                {{ item.time }}
                            </view> -->
                        </view>

                    </view>

                </view>

            </view>
                
        </view><!-- list_area -->

    </view><!-- main_container -->

    <!-- qc-More -->
    <qc-More str="{{ str }}" wx:if="{{ isMore }}"></qc-More><!-- qc-More -->

    <!-- qc-Tabbar -->
    <qc-Tabbar></qc-Tabbar><!-- qc-Tabbar -->


    <!-- qc-SignIn -->
    <qc-SignIn 
    bind:sureBtn="sureBtn"
    wx:if="{{ signInIf }}"></qc-SignIn><!-- qc-SignIn -->

    <!-- tips_mask -->
    <view class="tips_mask fadeIn" wx:if="{{ bindcarIf }}" style="background-image:url({{ IMGSERVICE }}/center/bind_car.png);">

        <view class="main">

            <view class="title">绑定车主即可获得</view>

            <view class="number">50V豆</view>

            <view class="btn_group">
                <view class="btn out" bindtap="unbind">暂不是车主</view>

                <view class="btn go" bindtap="bind">立即绑定</view>
            </view>

        </view>

    </view><!-- tips_mask -->

    <!-- tips_mask -->
    <view class="tips_mask fadeIn" wx:if="{{ giftIf && keyGroup.giftKey }}" style="background-image:url({{ IMGSERVICE }}/index/jianmianli.png);">

        <view class="main">

            <view class="title">授权即可获得</view>

            <view class="number">30V豆</view>

            <view class="btn_group">
                <view class="btn out" bindtap="jumpGift">直接跳过</view>

                <button open-type="getUserInfo" class="btn go" bindgetuserinfo="authBtn">立即授权</button>
            </view>

        </view>

    </view><!-- tips_mask -->

    <!-- qc-page404 -->
    <qc-page404 wx:if="{{ page404 }}" bind:reload="reload"></qc-page404><!-- qc-page404 -->
    
</view>
