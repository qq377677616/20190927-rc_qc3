<!-- index_page -->
<view class="index_page">

    <!-- swiper-area -->
    <view class="swiper_area">

        <swiper 
            circular="true" 
            autoplay="true" 
            interval="2500" 
            bindchange="dotchange">

            <swiper-item wx:for="{{ listInfo.banner_list }}" wx:key="index" style="background-image:url({{ item.image }});" data-index="{{ index }}" bindtap="bannerJump"></swiper-item>
           

        </swiper>

        <view class="dots">
            <view wx:for="{{ listInfo.banner_list }}" wx:key="index" class="dot_item {{dotIndex == index ? 'active' : ''}}">
                <view class="tiao"></view>
            </view>
            <view class="dot_item"></view>
        </view>

    </view><!-- swiper-area -->

    <!-- main_container -->
    <view class="main_container">

        <!-- nav_area -->
        <scroll-view scroll-x>
            <view class="nav_area">

                <view class="nav_item {{ listInfo.icon_list.length == 3 ? 'flex1' : 'flex0' }}" wx:for="{{ listInfo.icon_list }}" wx:key="index" data-index="{{ index }}" bindtap="navJump">
                    <view class="image">
                        <image src="{{ item.icon }}" mode="widthFix"></image>
                    </view>

                    <view class="span nowrap">{{ item.name }}</view>
                </view>

