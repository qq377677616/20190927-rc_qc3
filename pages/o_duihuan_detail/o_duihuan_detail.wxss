/* pages/o_duihuan_detail/o_duihuan_detail.wxss */
page{
    height: 100%;
    background-color: #F3F3F3;
}
.whole {
    padding: 28rpx;
}

/* handbox */
.handbox {
    background-color: #fff;
    border-radius: 14rpx;
    display: flex;
    align-items: center;
    padding: 32rpx 37rpx;
    margin-bottom: 22rpx;
}

.handbox image {
    flex:0 0 auto;
    width: 86rpx;
    height: 86rpx;
    border-radius: 50%;
    margin-right: 30rpx;
}

.handbox .info{
    width: 0;
    flex:1;
}
.handbox .info .title{
    font-size: 32rpx;
    color: #333;
    font-weight: bold;
    margin-bottom: 20rpx;
}
.handbox .info .date{
    font-size: 24rpx;
    color: #999;
}
.handbox .look{
    flex:0 0 auto;
    font-size: 30rpx;
    color: #145CBF;
}
/* handbox */

/* shop_list */
.shop_list {
    border-radius: 14rpx;
    padding: 0 29rpx;
    background-color: #fff;
    margin-bottom: 24rpx;
}

.shop_list .shop_item {
    padding: 34rpx 0;
    display: flex;
}

.shop_list .shop_item:not(:first-of-type){
    border-top: 1rpx solid #eee;
}

.shop_list .shop_item .image{
    flex:0 0 auto;
    width: 156rpx;
    height: 122rpx;
    background-repeat:no-repeat;
    background-position: center center;
    background-size: cover;
    margin-right: 28rpx;
    border-radius:10rpx;
}
.shop_list .shop_item .info{
    width: 0;
    flex:1;
    line-height: 1em;
}
.shop_list .shop_item .info .title{
    font-weight: bold;
    font-size: 30rpx;
    color: #333;
    margin-bottom:18rpx;
}
.shop_list .shop_item .info .num{
    font-size:24rpx;
    color: #999;
    margin-bottom:18rpx;
}
.shop_list .shop_item .info .v{
    font-size:26rpx;
    color: #333;
}
.shop_list .total{
    height: 50rpx;
    line-height: 50rpx;
    display: flex;
    justify-content: flex-end;
}
.shop_list .total .span{
    font-size: 26rpx;
    color: #999;
    margin-right: 10rpx;
}
.shop_list .total .num{
    font-size: 28rpx;
    color: #145CBF;
}/* shop_list */


/* section */
.section{
    border-radius:14rpx;
    background-color: #fff;
    padding: 0 26rpx;
}
.section:not(:first-of-type){
    margin-top: 24rpx;
}
.section .title{
    height: 85rpx;
    line-height: 85rpx;
    font-size: 30rpx;
    color: #333;
    border-bottom: 1rpx solid #E4E4E4;
}
.section .order_item{
    height: 81rpx;
    display: flex;
    align-items: center;
}
.section .order_item .span{
    flex:0 0 auto;
    font-size: 26rpx;
    color: #999;
}
.section .order_item .p{
    width: 0;
    flex:1;
    font-size: 26rpx;
    color: #333;
    text-align: right;
    padding: 0 0 0 10rpx;
}/* section */