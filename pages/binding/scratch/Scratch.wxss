/* pages/binding/scratch/Scratch.wxss */

.center {
  width: 100%;
  background: center no-repeat;
  background-size: 100% 100%;
  display: flex;
  align-items: center;
  flex-direction: column;
  height: 100vh;
}

.guagua {
  width: 604rpx;
  height: 547rpx;
  background: center no-repeat;
  background-size: 100% 100%;
  margin-top: 114rpx;
  display: flex;
  justify-content: center;
}

/* 刮刮乐 */

.gua {
  width: 505rpx;
  height: 310rpx;
  margin-top: 190rpx;
  background: center no-repeat;
  background-size: 100% 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.tui-luck{
  width: 505rpx;
  height: 310rpx;
}

.num {
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #fff;
  margin-top: 4rpx;
}

.gua-btn {
  width: 450rpx;
  height: 60rpx;
  background: linear-gradient(0deg, rgba(255, 158, 0, 1), rgba(255, 223, 78, 1));
  border-radius: 30rpx;
  margin-top: 26rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #f61517;
}

/* 中奖弹窗 */

.popup {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.prize-popup {
  width: 654rpx;
  height: 779rpx;
  background: center no-repeat;
  background-size: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}

.gift {
  width: 150rpx;
  margin-top: 144rpx;
}

.quan {
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #242425;
  margin-top: 60rpx;
}

.no-txt1 {
  margin-top: 233rpx;
}

.no-txt1, no-txt2 {
  font-size: 32rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #242425;
  line-height: 46rpx;
}

.btn {
  width: 458rpx;
  height: 71rpx;
  border-radius: 36rpx;
  position: absolute;
  bottom: 25%;
  left: 16%;
}

.close {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  position: absolute;
  bottom: 0%;
  left: 49%;
}

/* bottom */

.bottom {
  width: 694rpx;
  border-radius: 20rpx;
  background: #fff;
  margin: 35rpx 0;
}

.bottom .title {
  text-align: center;
  font-size: 32rpx;
  color: #fd4f4e;
  padding-bottom: 17rpx;
  margin-top: 37rpx;
}

.bottom .title image {
  width: 361rpx;
}

.prize-list {
  width: 92.6%;
  margin: 0 auto;
  padding: 0rpx 30rpx;
  box-sizing: border-box;
  position: relative;
}

.prize-list::after {
  content: "";
  display: block;
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
}

.p-header, swiper-item {
  font-size: 24rpx;
  color: #f77d7b;
}

swiper {
  height: 384rpx;
}

.p-header view, swiper-item view {
  width: 28%;
  height: 96rpx;
  line-height: 96rpx;
  text-align: center;
}

swiper-item {
  height: 96rpx;
  color: #333;
  font-size: 24rpx;
  border-bottom: 1rpx dashed #f7efe6;
}

.p-header .text, swiper-item .text {
  width: 44%;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
