/* pages/shop_mall/shop_mall.wxss */
page{
    height:100%;
    background-color:#F4F4F4;
}
.shop_mall_page{
    padding-bottom: 100rpx;
}

/* swiper_area */
.swiper_area{
    height: 405rpx;
    position:relative;
}   
.swiper_area swiper{
    height: 100%;
}
.swiper_area swiper swiper-item{
    background-size:cover;
    background-repeat:no-repeat;
    background-position: center center;
}
.swiper_area swiper swiper-item button{
    width: 100%;
    height: 100%;
}
.swiper_area .dots{
    display:flex;
    position:absolute;
    bottom:12rpx;
    left:50%;
    z-index:1;
    transform:translatex(-50%);
}
.swiper_area .dots .dot_item{
    width:8rpx;
    height:8rpx;
    border-radius: 50%;
    background-color:#fff;
    margin-left:5rpx;
    margin-right:5rpx;
    position: relative;
}
.swiper_area .dots .dot_item .tiao{
    position: absolute;
    left: 0;
    top: 0;
    height: 8rpx;
    width: 0;
    opacity:0;
    border-radius: 8rpx;
    background-color: #fff;
    transition:width 500ms ease-in-out,opacity 500ms ease-in-out;
}
.swiper_area .dots .dot_item.active .tiao{
    width: 26rpx;
    opacity:1;
}
.swiper_area .search_area{
    position: absolute;
    left: 50%;
    top: 20rpx;
    z-index:2;
    transform: translatex(-50%);
    background-color: #fff;
    width: 684rpx;
    height: 76rpx;
    border-radius:38rpx;
    display: flex;
    box-shadow:0 0 6rpx #EEE;
}
.swiper_area .search_area input{
    width: 0;
    flex:1;
    font-size: 30rpx;
    color: #333;   
    padding: 0 30rpx;  
    align-self:center;
}
.swiper_area .search_area input::placeholder{
    color: #C6CBDA;   
}
.swiper_area .search_area .icon{
    flex:0 0 auto;
    padding: 0 30rpx;
    width: 32rpx;
    display: flex;
    align-items: center;
}
.swiper_area .search_area image{
    width: 100%
}/* swiper_area */

/* round_robin_area */
.round_robin_area{
    background-color: #fff;
    padding: 0 0 0 28rpx;
    display: flex;
    align-items: center;
    height: 100rpx;
}
.round_robin_area .icon{
    flex:0 0 auto;
    width: 28rpx;
    margin-right: 15rpx;
}
.round_robin_area .round_robin{
    width: 0;
    flex:1;
    height: 100rpx;
}
.round_robin_area .round_robin swiper-item{
    display: flex;
    align-items: center;
}
.round_robin_area .round_robin swiper-item .span{
    width: 0;
    flex:1;
    font-size:28rpx;
    color:rgba(51,51,51,1);
}
.round_robin_area .more_btn{
    flex:0 0 auto;
    display: flex;
    align-items: center;
    padding: 0 15rpx 0 15rpx;
    height: 64rpx;
    background:linear-gradient(to left,rgba(34,116,208,1),rgba(32,161,224,1));
    border-radius: 32rpx 0 0 32rpx;
    box-shadow:-10rpx 0 10rpx 10rpx #fff,-10rpx 0 10rpx 10rpx #fff,-10rpx 0 10rpx 10rpx #fff;
}
.round_robin_area .more_btn .v_mark{
    margin-right: 4rpx;
    width: 30rpx;
}
.round_robin_area .more_btn .span{
    margin-right: 7rpx;
    font-size: 24rpx;
    color: #fff;
}
.round_robin_area .more_btn .more{
    font-size: 26rpx;
    color: #fff;
}/* round_robin_area */

/* nav_area */
.main_content{
    padding: 28rpx 28rpx 53rpx;
    overflow: hidden;
}
.main_content .nav_area{
    background-color: #fff;
    padding: 38rpx 0 0;
    display: flex;
    flex-wrap:wrap;
    align-items:flex-start;
    align-content:flex-start;
    box-shadow:0rpx 16rpx 60rpx 0rpx rgba(204,204,204,0.2);
    border-radius:18rpx;
    margin-bottom: 27rpx;
}
.main_content .nav_area .nav_item{
    width: 25%;
    display: flex;
    flex-direction:column;
    align-items: center;
    margin-bottom: 40rpx;
}
.main_content .nav_area .nav_item image{
    width: 80rpx;
    height: 80rpx;
    border-radius:50%;
    margin-bottom: 19rpx;
}
.main_content .nav_area .nav_item .span{
    width: 100%;
    font-size: 26rpx;
    color: #333;
    text-align: center;
}/* nav_area */

/* goods_list */
.goods_list{
    display: flex;
    flex-wrap:wrap;
    align-items:flex-start;
    align-content: flex-start;
    margin-left: -26rpx;
    margin-top: -28rpx;
    margin-bottom: 36rpx;
}
.goods_list .goods_item{
    width: 334rpx;
    background-color: #fff;
    overflow: hidden;
    border-radius:18rpx;
    margin-left: 26rpx;
    margin-top: 28rpx;
}
.goods_list .goods_item .image{
    height: 334rpx;
    overflow: hidden;
    position: relative;
}
.goods_list .goods_item .image image{
    width: 100%;
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translatex(-50%) translatey(-50%);
}
.goods_list .goods_item .info_area{
    padding: 25rpx 26rpx;
}
.goods_list .goods_item .info_area .title{
    font-size: 24rpx;
    color: #333;
    font-weight: bold;
    margin-bottom: 12rpx;
}
.goods_list .goods_item .info_area .info{
    font-size: 22rpx;
    color: #3F3F3F;
    display: flex;
    align-items: center;
}
.goods_list .goods_item .info_area .info .v{
    display: flex;
    align-items: center;
    flex:1;
}
.goods_list .goods_item .info_area .info .v .v_mark{
    margin-right: 10rpx;
    width: 30rpx;
}
.goods_list .goods_item .info_area .info .v .span{
    font-weight: bold;
}
.goods_list .goods_item .info_area .info .cart{
    flex:0 0 auto;
    font-size: 28rpx;
    color: #E3413E;
    visibility: hidden;
}/* goods_list */

/* look_more_btn */
.look_more_btn{
    font-size: 24rpx;
    color: #666;
    width: 150rpx;
    height: 48rpx;
    border:1rpx solid rgba(153,153,153,1);
    border-radius:8rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto;
    box-sizing: border-box;
}/* look_more_btn */

/* float_btn */
.float_btn{
    position: fixed;
    right: 30rpx;
    top: 50%;
}
.float_btn .btn{
    width: 80rpx;
    height: 80rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius:50%;
    font-size: 40rpx;
    color: #fff;
    margin-bottom: 30rpx;
}
.float_btn .btn.cart_btn{
    background-color: #666666;
    box-shadow:0 0 8rpx #666666;
}
.float_btn .btn.kf_btn{
    background-color: #333333;
    box-shadow:0 0 8rpx #333333;
}/* float_btn */