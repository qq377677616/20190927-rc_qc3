/* pages/product_detail/product_detail.wxss */

page{
    height: 100%;
    background-color: #F5F5F5;
}

.product_detail_page{
    padding-bottom: 108rpx;
}

/* swiper_area */
.swiper_area{
    height:100vw;
    position:relative;
}   
.swiper_area swiper{
    height:100%;
}
.swiper_area swiper swiper-item{
    /* padding-top:100%; */
    background-size:100%;
    background-repeat:no-repeat;
    background-position: center center;
}
.swiper_area swiper{
    width: 100%;
    height: 100%;
}
.swiper_area .dots{
    display:flex;
    position:absolute;
    bottom:12rpx;
    left:50%;
    z-index:1;
    transform:translatex(-50%);
}
.swiper_area .dots .dot_item{
    width:8rpx;
    height:8rpx;
    border-radius: 50%;
    background-color:#fff;
    margin-left:5rpx;
    margin-right:5rpx;
    position: relative;
}
.swiper_area .dots .dot_item .tiao{
    position: absolute;
    left: 0;
    top: 0;
    height: 8rpx;
    width: 0;
    opacity:0;
    border-radius: 8rpx;
    background-color: #fff;
    transition:width 500ms ease-in-out,opacity 500ms ease-in-out;
}
.swiper_area .dots .dot_item.active .tiao{
    width: 26rpx;
    opacity:1;
}/* swiper_area */



/* product_name */
.product_name{
    padding:30rpx 38rpx;
    background-color: #fff;
    display: flex;
    align-items: center;
    margin-bottom: 10rpx;
}   
.product_name .info{
    width: 0;
    flex:1;
}
.product_name .info .title{
    font-size: 32rpx;
    color: #333;
    display: flex;
    margin-bottom: 25rpx;
}
.product_name .info .title .h2{
    flex:0 0 auto;
    font-weight: bold;
}
.product_name .info .title .span{
    width: 0;
    flex:1;
}
.product_name .info .v_label{
    display: flex;
    align-items: center;
}
.product_name .info .v_label .v{
    display: flex;
    align-items: center;
    font-size: 24rpx;
    margin-right: 68rpx;
}
.product_name .info .v_label .v .v_mark{
    width: 30rpx;
    margin-right: 10rpx;
}
.product_name .info .v_label .v .span{
    color: #3F3F3F;
    font-weight:bold;
}
.product_name .info .v_label .label{
    width: 114rpx;
    height:38rpx;
    color: #145BC2;
    font-size: 24rpx;
    border:1rpx solid rgba(20,91,194,1);
    box-sizing: border-box;
    border-radius:4rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-right: 10rpx;
}
.product_name .cart{
    flex:0 0 auto;
}
.product_name .cart .icon{
    font-size: 34rpx;
    color: #E3413E;
    margin-bottom: 10rpx;
    text-align: center;
}
.product_name .cart .span{
    font-size: 24rpx;
    color: #999;
}/* product_name */


