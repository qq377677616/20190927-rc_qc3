/* pages/sign_up/sign_up.wxss */

page{
    height: 100%;
}
.sign_up_page{
    height: 100%;
    background-size:cover;
    background-repeat:no-repeat;
    background-position:center center;
}

/* main */
.main{
    padding: 155rpx 130rpx 0;
}
.main .rule{
    height:38rpx;
    border:1rpx solid rgba(255,255,255,1);
    border-radius:19rpx;
    padding: 0 26rpx;
    font-size: 24rpx;
    color: #fff;
    position: fixed;
    right:30rpx;
    top: 30rpx;
    line-height: 38rpx;
    box-sizing: border-box;
}
.main .car_type{
    font-size: 72rpx;
    color: #fff;
    font-weight: bold;
    text-align: left;
    margin-bottom: 48rpx;
}
.main .span{
    font-size: 72rpx;
    color: #fff;
    font-weight: bold;
    text-align: right;
}
.main .info{
    position: fixed;
    bottom: 63rpx;
    left:50%;
    transform: translateX(-50%);
    width: 694rpx;
    background:rgba(255,255,255,0.8);
    border-radius:30rpx;
    padding: 60rpx 48rpx 50rpx;
    box-sizing: border-box;
}
.main .info .headimg{
    margin-bottom: 72rpx;
    display: flex;
    align-items: center;
}
.main .info .headimg .image{
    flex:1;
    display: flex;
    justify-content: flex-end;
    margin-right: 22rpx;
}
.main .info .headimg .image image{
    width: 65rpx;
    border-radius:50%;
    margin-left: -20rpx;
}
.main .info .headimg .p{
    flex:1;
    font-size: 34rpx;
    color: #333;
}

.main .info .btn_group{
    display: flex;
    justify-content: space-between;
}

.main .info .btn_group .sign_up{
  width: 500rpx;
  height: 80rpx;
}

.main .info .btn_group .btn{
    display: flex;
    align-items: center;
    justify-content: center;
    box-sizing: border-box;
    border-radius:10rpx;
    font-size: 28rpx;
}
.main .info .btn_group .btn.yao{
    color: #333;
    border:1rpx solid rgba(83,83,83,1);
}
.main .info .btn_group .btn.sign_up{
    color: #fff;
    background-color: #333;
}

.main .info .btn_group .btn_group_down{
  display: flex;
}

.main .info .btn_group .btn_group_down .invite{
    width: 280rpx;
    height: 80rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 28rpx;
    color: #FFF;
    background:linear-gradient(90deg,rgba(32,161,224,1),rgba(18,77,184,1));
    
}

.main .info .btn_group .btn_group_down .signed{
    width: 280rpx;
    height: 80rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 28rpx;
    color: #666;
    border: 1rpx solid #818082;
    margin-left: 39rpx;
}

