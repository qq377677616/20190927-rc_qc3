/* pages/o_pin_status/o_pin_status.wxss */
page{
    height: 100%;
    background: #F1F1F1;
}
.o_pin_status{
    padding: 25rpx 28rpx;
}

/* main_container */
.main_container{
    background-color: #fff;
    border-radius:14rpx;
    padding: 22rpx 22rpx 60rpx;
}

.goods_area{
    padding: 19rpx;
    display: flex;
    background-color: rgba(241, 64, 62, 0.1);
    border-radius:14rpx;
    margin-bottom: 50rpx;
}
.goods_area .image{
    flex:0 0 auto;
    width: 193rpx;
    height: 151rpx;
    overflow:hidden;
    position: relative;
    margin-right: 32rpx;
    border-radius:10rpx;
}
.goods_area .image image{
    width: 100%;
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translateX(-50%) translateY(-50%);
    border-radius:10rpx;
}
.goods_area .info{
    width: 0;
    flex:1;
    line-height: 1em;
}
.goods_area .info .title{
    font-size: 30rpx;
    color: #333;
    margin-bottom: 35rpx;
    font-weight: bold;
}
.goods_area .info .v{
    font-size: 24rpx;
    color: #F34644;
    margin-bottom: 24rpx;
}
.goods_area .info .pin{
    font-size: 24rpx;
    color: #666;
}

.pin_status{
    font-size: 28rpx;
    font-weight: bold;
    color: #F34442;
    font-style: italic;
    margin-bottom: 35rpx;
    text-align: center;
}

.tips{
    text-align: center;
    font-size: 28rpx;
    color: #333;
    margin-bottom: 23rpx;
}

.time{
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 56rpx;
}
.time .span{
    font-size: 24rpx;
    color: #999;
}
.time .hours,
.time .minutes,
.time .seconds{
    font-size: 22rpx;
    color: #fff;
    background-color: #F1403E;
    border-radius:6rpx;
    padding: 6rpx 4rpx;
}
.time .mh{
    font-size: 32rpx;
    color: #F1403E;
}

.friend_group{
    margin-bottom: 95rpx;
    display: flex;
    align-items: center;
}
.friend_group .o{
    flex:0 0 auto;
    margin-right: 17rpx;
    position: relative;
}
.friend_group .o .decorate{
    width: 24rpx;
    height: 22rpx;
    position: absolute;
    left: 0;
    top: 0;
    transform: translateX(-50%) translateY(-50%);
}
.friend_group .o .headimg{
    width: 54rpx;
    height: 54rpx;
    border-radius:50%;
}
.friend_group .friend_headimg{
    width: 0;
    flex:1;
    background-color: #F7F5F6;
    padding: 7rpx 28rpx;
    border-radius:12rpx;
    display: flex;
}
.friend_group .friend_headimg image{
    width: 54rpx;
    height: 54rpx;
    border-radius:50%;
}

.btn{
    height: 90rpx;
    font-size:30rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    box-sizing: border-box;
    border-radius:10rpx;
}
.invite,
.prize{
    color: #fff;
    background:linear-gradient(to left,rgba(18,77,184,1),rgba(32,161,224,1));
    margin-bottom: 50rpx;
    box-shadow:0 8rpx 8rpx rgba(18,77,184,0.5);
}
.home{
    color: #124EB9;
    border:1rpx solid #20A1E0;

}