<view class="my_header">
  <view class="header_top" style="height:{{statusBarHeight}}px;line-height:{{statusBarHeight}}px;"></view>  
  <view class="header_bottom" style="height:{{titleHeight}}px;line-height:{{titleHeight}}px;">
    <view class="icon" wx:if="{{btnIcon === 'back'}}" bindtap="back_one"><image src="icon_back.png" /></view>
    <view class="icon" wx:if="{{btnIcon === 'home'}}" bindtap="back_home"><image src="icon_home.png" /></view>
    {{title}}
  </view> 
</view>
