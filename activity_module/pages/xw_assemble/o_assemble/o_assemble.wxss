    margin-top: 36rpx;
    height: 74rpx;
    font-size: 30rpx;
    line-height: 74rpx;
    text-align:center;
    box-sizing: border-box;
    border-radius:37rpx;
    font-weight: bold;
}
.btn-group.colorF1403E .btn.share{
    background-color: #F1403E;
    color: #fff;
}
.btn-group.colorF1403E .btn.more{
    border:2rpx solid #F1403E;
    color:#F1403E;
}
.btn-group.color003B73 .btn.receive{
    background-color: #003B73;
    color: #fff;
}
.btn-group.color003B73 .btn.receive::before{
    background-color: #fff;
}
.btn-group.color003B73 .btn.join{
    background-color: #003B73;
    color: #fff;
}
.btn-group.color003B73 .btn.share{
    background-color: #003B73;
    color: #fff;
}
.btn-group.color003B73 .btn.more{
    border:2rpx solid #003B73;
    color:#003B73;
}