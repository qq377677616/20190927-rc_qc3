/* activity_module/pages/xw_assemble/o_assemle/o_assemle.wxss */

page{
    background-color: #F5F5F5;
}

.container{
    padding: 28rpx;
}

.state-info{
    padding: 22rpx;
    box-shadow:0 6rpx 32rpx 0 rgba(209,209,209,0.2);
    border-radius:14rpx;
    background-color: #fff;
}
.state-info .info-header{
    padding:22rpx 20rpx;
    background-color: #EEE;
    border-radius:14rpx;
}
.state-info .info-header .poster{
    float:left;
    width: 152rpx;
    height: 152rpx;
    background-color: #fff;
    border-radius:8rpx;
}
.state-info .info-header .goods-info{
    margin-left: 176rpx;
}
.state-info .info-header .goods-info .name{
    margin-bottom: 28rpx;
    font-size: 32rpx;
    color: #333;
    font-weight: bold;
}
.state-info .info-header .goods-info .money{
    margin-bottom: 18rpx;
}
.state-info .info-header .goods-info .money .span{
    display: inline-block;
    font-size: 28rpx;
    color: #666;
}
.state-info .info-header .goods-info .money .number{
    display: inline-block;
    font-size: 36rpx;
    color: #F1403E;
    font-weight: bold;
}
.state-info .info-header .goods-info .out{
    font-size: 24rpx;
    color: #333;
}

.state-info .state-message{
    display: block;
    margin-bottom: 32rpx;
    margin-top: 42rpx;
    font-style:italic;
    text-align:center;
    font-size: 36rpx;
    color: #F34644;
    font-weight: bold;

}
.state-info .state-message.fail{
    color: #999;
}
.state-info .current-join-message{
    display: block;
    margin-bottom: 12rpx;
    text-align:center;
    font-size: 28rpx;
    color: #333;
    font-weight: bold;
}
.state-info .current-join-message .span{
    display: inline;
    font-size: 30rpx;
    color: #F1403E;
    font-weight: bold;
}

.state-info .count-down {
    margin-bottom: 104rpx;
    text-align: center;
}
.state-info .count-down.hidden {
    visibility:hidden;
}
.state-info .count-down .label{
    display: inline-block;
    font-size: 24rpx;
    color: #666;
}
.state-info .count-down .p{
    display: inline-block;
}
.state-info .count-down .span {
    display: inline-block;
    padding: 10rpx 8rpx;
    font-size: 20rpx;
    color: #fff;
    background-color: #333;
    border-radius: 8rpx;
}

.state-info .count-down .span.active {
    background-color: #F1403E;
}

.state-info .count-down .text-1 {
    padding: 0 2rpx;
    display: inline-block;
    font-size: 22rpx;
    color: #333;
}

.state-info .count-down .text-2 {
    padding: 0 4rpx;
    display: inline-block;
    color: #333;
    font-size: 16rpx;
}

.state-info .join-head-img{
    width: 384rpx;
    margin: auto;
}

.state-info .head-img-item{
    position: relative;
    display: inline-block;
    margin: 15rpx 15rpx;
    box-sizing: border-box;
    width: 66rpx;
    height: 66rpx;
    border-radius:50%;
    vertical-align:middle;
}
.state-info .head-img-item.virtual-position{
    border:1rpx dashed #7D7D7D;
}
.state-info .head-img-item .huang-guan{
    position: absolute;
    left: -15rpx;
    top: -15rpx;
    width: 35rpx;
    height: 35rpx;
    transform:rotate(-45deg);
}
.state-info .head-img-item.joining .head-img{
    width: 100%;
    height: 100%;
    border-radius:50%;
}
.state-info .head-img-item.virtual-position .head-img{
    position: absolute;
    left:50%;
    top:50%;
    transform:translate3d(-50%,-50%,0);
    width: 60%;
    height: 60%;
}
.state-info .head-img-item .span{
    position: absolute;
    bottom: 0;
    left: 50%;
    transform:translate3d(-50%,50%,0);
    padding: 4rpx 8rpx;
    font-size: 15rpx;
    color: #fff;
    line-height: normal;
    background-color: #FFC052;
    border-radius:12px;
    white-space:nowrap;
}

