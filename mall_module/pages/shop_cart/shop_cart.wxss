/* pages/shop_cart/shop_cart.wxss */


page{
    height: 100%;
    background-color: #F5F5F5;
}
.shop_cart_page{
    display: flex;
    flex-direction: column;
    height: 100%;
}


/* header */
.header{
    flex:0 0 auto;
    display: flex;
    height: 73rpx;
    align-items:flex-end;
    background-color: #fff;
}
.header .item{
    flex:1;
    display: flex;
    justify-content: center;
    font-size: 32rpx;
    color: #999;
}
.header .item.active{
    color: #333;
}

.header .item .span{
    padding-bottom: 18rpx;
    border-bottom:6rpx solid transparent;
    position: relative;
}
.header .item .span .badge{
    position: absolute;
    top: 0;
    right: 0;
    transform:translateX(100%) translateY(-50%);
    color: #fff;
    font-size: 20rpx;
    height: 24rpx;
    line-height:24rpx;
    background-color: #F23E3C;
    border-radius: 14rpx;
    border: 1rpx solid #fff4e9;
    min-width:30rpx;
    display: flex;
    justify-content: center;
    padding-right: 5rpx;
}
.header .item.active .span{
    border-bottom-color:#333;
}/* header */

/* cart_list */
.cart_list{
    height: 0;
    flex:1;
}
.cart_list .main{
    padding: 28rpx;
}
.cart_list .main .cart_item{
    background-color: #fff;
    border-radius:18rpx;
    padding: 20rpx 50rpx 20rpx 20rpx;
    display: flex;
    position: relative;
}
.cart_list .main .cart_item:not(:first-of-type){
    margin-top: 28rpx;
}
.cart_list .main .cart_item .checked{
    flex:0 0 auto;
    display: flex;
    align-items: center;
    padding-right: 20rpx;
    width: 32rpx;
}
.cart_list .main .cart_item .checked image{
    width: 100%;
}
.cart_list .main .cart_item .checked .no{
    width: 32rpx;
    height: 32rpx;
    border-radius:50%;
    border:1rpx solid #C8C8C8;
}
.cart_list .main .cart_item .image{
    flex:0 0 auto;
    width: 134rpx;
    height: 134rpx;
    position: relative;
    overflow: hidden;
    border-radius:10rpx;
    margin-right: 20rpx;
}
.cart_list .main .cart_item .image image{
    width: 100%;
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translatex(-50%) translatey(-50%);
    border-radius:10rpx;
}
.cart_list .main .cart_item .info{
    width: 0;
    flex:1;
    line-height: 1em;
}
.cart_list .main .cart_item .info .title{
    font-size:28rpx;
    font-weight:bold;
    color:rgba(51,51,51,1);
    margin-bottom: 14rpx;
}
.cart_list .main .cart_item .info .specs{
    font-size:22rpx;
    color:rgba(153,153,153,1);
    margin-bottom: 30rpx;
}
.cart_list .main .cart_item .info .specs.no{
    visibility:hidden;
}
.cart_list .main .cart_item .info .v_num{
    display: flex;
    align-items: flex-end;
}
.cart_list .main .cart_item .info .v_num .v{
    flex:1;
    display: flex;
    align-items: center;
}
.cart_list .main .cart_item .info .v_num .v .v_mark{
    width: 30rpx;
    margin-right: 10rpx;
}
.cart_list .main .cart_item .info .v_num .v .span{
    font-size: 22rpx;
    color: #3F3F3F;
    font-weight: bold;
}
.cart_list .main .cart_item .info .v_num .sub_num_add{
    flex:0 0 auto;
    display: flex;
    align-items: center;
}
.cart_list .main .cart_item .info .v_num .sub_num_add .span{
    height: 38rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    box-sizing: border-box;
}
.cart_list .main .cart_item .info .v_num .sub_num_add .span.sub{
    color: #333;
    font-size: 34rpx;
    width: 38rpx;
    border:1rpx solid #333;
}
.cart_list .main .cart_item .info .v_num .sub_num_add .span.num{
    color: #333;
    font-size: 28rpx;
    min-width: 50rpx;
    border-top:1rpx solid #333;
    border-bottom:1rpx solid #333;
}
.cart_list .main .cart_item .info .v_num .sub_num_add .span.add{
    color: #fff;
    font-size: 34rpx;
    background-color: #333;
    width: 38rpx;
    border:1rpx solid #333;
}
.cart_list .main .cart_item .del_btn{
    position: absolute;
    right: 0;
    top: 0;
    width: 40rpx;
}
/* cart_list */


/* footer */
.footer{
    flex:0 0 auto;
    display: flex;
    height: 108rpx;
    background-color: #333;
    font-size: 28rpx;
    font-weight: bold;
    color: #fff;
    padding-left: 52rpx;
    line-height: 1em;
}
.footer .all{
    align-self:center;
    flex:0 0 auto;
    display: flex;
    align-items: center;
}
.footer .all image{
    width: 32rpx;
    margin-right: 15rpx;
}
.footer .all .no{
    width: 32rpx;
    height: 32rpx;
    border-radius:50%;
    border:1rpx solid rgba(255,255,255,1);
    box-sizing: border-box;
    margin-right: 15rpx;
}
.footer .all .span{

}
.footer .total{
    width: 0;
    flex:1;
    align-self:center;
    text-align: center;
}
.footer .btn{
    flex:0 0 auto;
    align-self:stretch;
    background:linear-gradient(to left,rgba(34,116,208,1),rgba(32,161,224,1));
    width: 235rpx;
    display: flex;
    align-items: center;
    justify-content: center;

}/* footer */

/* cart_null */
.cart_null{
    padding: 0 31rpx;
}
.cart_null .o_vdou{
    display: flex;
    align-items:center;
    height: 120rpx;
    border-bottom: 1rpx solid #DEDEDE;
}
.cart_null .o_vdou .v_mark{
    width: 30rpx;
    margin-right: 13rpx;
}
.cart_null .o_vdou .span{
    font-size: 30rpx;
    color: #999;
}
.cart_null .tips_area{
    display: flex;
    flex-direction: column;
    align-items: center;
    font-weight:bold;
    padding-top: 220rpx;
}
.cart_null .tips_area .icon{
    font-size: 180rpx;
    color: #E2E2E2;
    margin-bottom: 30rpx;
}
.cart_null .tips_area .span{
    font-size: 28rpx;
    color: #999;
    margin-bottom: 75rpx;
}
.cart_null .tips_area .go_btn{
    width: 215rpx;
    height: 68rpx;
    border:1rpx solid rgba(153,153,153,1);
    border-radius:8rpx;
    font-size: 24rpx;
    color: #999;
    display: flex;
    align-items: center;
    justify-content: center;
    letter-spacing: 6rpx;
}/* cart_null */